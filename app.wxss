/**
 * 习惯打卡小程序全局样式
 * 遵循设计规范文档定义的视觉标准
 */

/* 引入图标字体 */
@import '/styles/iconfont.wxss';

/* 微信小程序button样式重置 */
button {
  background-color: transparent;
  padding: 0;
  margin: 0;
  line-height: normal;
  font-size: inherit;
  border-radius: 0;
  border: none;
  overflow: visible;
  width: auto;
  box-sizing: border-box;
}

button::after {
  border: none;
  background: none;
  display: none;
}

/* 全局变量 */
page {
  /* 主色调 */
  --primary-color: #4f7cff;
  --primary-light: #7b9dff;
  --primary-dark: #3a5fd9;
  --primary-gradient: linear-gradient(135deg, #4f7cff 0%, #7b9dff 100%);

  /* 辅助色 */
  --success-color: #36b37e;
  --warning-color: #ffab00;
  --error-color: #ff5630;
  --info-color: #6554c0;

  /* 中性色 */
  --title-color: #172b4d;
  --text-color: #505f79;
  --text-color-secondary: #7a869a;
  --placeholder-color: #b3bac5;
  --border-color: #dfe1e6;
  --divider-color: #ebecf0;
  --background-color: #f4f5f7;
  --card-background: #ffffff;

  /* 字体 */
  --font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC',
    'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial,
    sans-serif;

  /* 字体大小 */
  --font-size-title-large: 40rpx;
  --font-size-title: 32rpx;
  --font-size-subtitle: 28rpx;
  --font-size-content: 26rpx;
  --font-size-auxiliary: 24rpx;
  --font-size-mini: 20rpx;

  /* 字重 */
  --font-weight-light: 300;
  --font-weight-regular: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  --font-weight-bold: 700;

  /* 间距 */
  --spacing-mini: 4rpx;
  --spacing-small: 8rpx;
  --spacing-regular: 16rpx;
  --spacing-medium: 24rpx;
  --spacing-large: 32rpx;
  --spacing-xlarge: 48rpx;

  /* 圆角 */
  --radius-small: 8rpx;
  --radius-medium: 12rpx;
  --radius-large: 16rpx;
  --radius-xlarge: 24rpx;
  --radius-circle: 50%;

  /* 阴影 */
  --shadow-light: 0 2rpx 10rpx rgba(0, 0, 0, 0.06);
  --shadow-medium: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
  --shadow-dark: 0 8rpx 24rpx rgba(0, 0, 0, 0.16);
  --shadow-button: 0 4rpx 12rpx rgba(79, 124, 255, 0.25);

  /* 动画 */
  --transition-duration: 300ms;
  --transition-timing: cubic-bezier(0.4, 0, 0.2, 1);

  /* 全局设置 */
  font-family: var(--font-family);
  font-size: var(--font-size-content);
  color: var(--text-color);
  line-height: 1.5;
  background-color: var(--background-color);
  box-sizing: border-box;
}

/* 暗黑模式变量 */
page.dark {
  --primary-color: #5e72e4;
  --primary-light: #7b88e9;
  --primary-dark: #4a5bd0;
  --primary-gradient: linear-gradient(135deg, #5e72e4 0%, #7b88e9 100%);

  --title-color: #e5e5e5;
  --text-color: #cccccc;
  --text-color-secondary: #999999;
  --placeholder-color: #666666;
  --border-color: #444444;
  --divider-color: #333333;
  --background-color: #121212;
  --card-background: #1e1e1e;

  --shadow-light: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
  --shadow-medium: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
  --shadow-dark: 0 8rpx 24rpx rgba(0, 0, 0, 0.4);
  --shadow-button: 0 4rpx 12rpx rgba(94, 114, 228, 0.35);
}

/* 布局类 */
.container {
  padding: var(--spacing-medium);
  box-sizing: border-box;
  background-color: var(--background-color);
  min-height: 100vh;
}

.flex {
  display: flex;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-around {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.flex-start {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.flex-end {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.flex-1 {
  flex: 1;
}

.flex-wrap {
  flex-wrap: wrap;
}

