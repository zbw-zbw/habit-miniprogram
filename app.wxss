/* 文本类 */
.text-title-large {
  font-size: var(--font-size-title-large);
  color: var(--title-color);
  font-weight: var(--font-weight-bold);
}

.text-title {
  font-size: var(--font-size-title);
  color: var(--title-color);
  font-weight: var(--font-weight-semibold);
}

.text-subtitle {
  font-size: var(--font-size-subtitle);
  color: var(--title-color);
  font-weight: var(--font-weight-medium);
}

.text-content {
  font-size: var(--font-size-content);
  color: var(--text-color);
}

.text-auxiliary {
  font-size: var(--font-size-auxiliary);
  color: var(--text-color-secondary);
}

.text-mini {
  font-size: var(--font-size-mini);
  color: var(--text-color-secondary);
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-primary {
  color: var(--primary-color);
}
.text-success {
  color: var(--success-color);
}
.text-warning {
  color: var(--warning-color);
}
.text-error {
  color: var(--error-color);
}
.text-info {
  color: var(--info-color);
}

.text-bold {
  font-weight: var(--font-weight-bold);
}
.text-semibold {
  font-weight: var(--font-weight-semibold);
}
.text-medium {
  font-weight: var(--font-weight-medium);
}
.text-regular {
  font-weight: var(--font-weight-regular);
}
.text-light {
  font-weight: var(--font-weight-light);
}

/* 边框类 */
.border {
  border: 1px solid var(--border-color);
}

.border-top {
  border-top: 1px solid var(--border-color);
}

.border-bottom {
  border-bottom: 1px solid var(--border-color);
}

.border-left {
  border-left: 1px solid var(--border-color);
}

.border-right {
  border-right: 1px solid var(--border-color);
}

.radius-small {
  border-radius: var(--radius-small);
}

.radius-medium {
  border-radius: var(--radius-medium);
}

.radius-large {
  border-radius: var(--radius-large);
}

.radius-xlarge {
  border-radius: var(--radius-xlarge);
}

.radius-circle {
  border-radius: var(--radius-circle);
}

/* 卡片类 */
.card {
  background-color: var(--card-background);
  border-radius: var(--radius-large);
  padding: var(--spacing-medium);
  margin-bottom: var(--spacing-medium);
  box-shadow: var(--shadow-light);
  overflow: hidden;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-regular);
}

.card-title {
  font-size: var(--font-size-subtitle);
  font-weight: var(--font-weight-semibold);
  color: var(--title-color);
}

.card-action {
  font-size: var(--font-size-auxiliary);
  color: var(--primary-color);
}

.card-body {
  margin-bottom: var(--spacing-regular);
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: var(--spacing-regular);
  border-top: 1px solid var(--divider-color);
}

/* 按钮基础样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 var(--spacing-medium);
  font-size: var(--font-size-content);
  height: 88rpx;
  border-radius: var(--radius-medium);
  transition: all var(--transition-duration) var(--transition-timing);
  font-weight: var(--font-weight-medium);
}

.btn-primary {
  background: var(--primary-gradient);
  color: #ffffff;
  box-shadow: var(--shadow-button);
}

.btn-outline {
  background-color: transparent;
  color: var(--primary-color);
  border: 1px solid var(--primary-color);
}

.btn-text {
  background-color: transparent;
  color: var(--primary-color);
  padding: 0;
  height: auto;
}

.btn-small {
  height: 64rpx;
  font-size: var(--font-size-auxiliary);
}

.btn-large {
  height: 96rpx;
  font-size: var(--font-size-subtitle);
}

.btn-block {
  width: 100%;
}

.btn-disabled {
  opacity: 0.5;
  pointer-events: none;
}

.btn .iconfont {
  margin-right: var(--spacing-small);
}

/* 表单元素 */
.input {
  height: 88rpx;
  background-color: var(--card-background);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-medium);
  padding: 0 var(--spacing-medium);
  font-size: var(--font-size-content);
  color: var(--text-color);
  transition: all var(--transition-duration) var(--transition-timing);
}

.input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 2px rgba(79, 124, 255, 0.2);
}

.input-placeholder {
  color: var(--placeholder-color);
}

.textarea {
  background-color: var(--card-background);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-medium);
  padding: var(--spacing-small) var(--spacing-medium);
  font-size: var(--font-size-content);
  color: var(--text-color);
  width: 100%;
  box-sizing: border-box;
  transition: all var(--transition-duration) var(--transition-timing);
}

.textarea:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 2px rgba(79, 124, 255, 0.2);
}

/* 标签 */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 0 var(--spacing-small);
  height: 40rpx;
  font-size: var(--font-size-mini);
  border-radius: var(--radius-small);
  background-color: var(--divider-color);
  color: var(--text-color-secondary);
}

.tag-primary {
  background-color: rgba(79, 124, 255, 0.1);
  color: var(--primary-color);
}

.tag-success {
  background-color: rgba(54, 179, 126, 0.1);
  color: var(--success-color);
}

.tag-warning {
  background-color: rgba(255, 171, 0, 0.1);
  color: var(--warning-color);
}

.tag-error {
  background-color: rgba(255, 86, 48, 0.1);
  color: var(--error-color);
}

/* 徽标 */
.badge {
  position: relative;
}

.badge-dot {
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: var(--radius-circle);
  background-color: var(--error-color);
}

.badge-count {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  min-width: 32rpx;
  height: 32rpx;
  border-radius: var(--radius-circle);
  background-color: var(--error-color);
  color: #ffffff;
  font-size: var(--font-size-mini);
  text-align: center;
  padding: 0 6rpx;
}

/* 列表 */
.list {
  background-color: var(--card-background);
  border-radius: var(--radius-large);
  overflow: hidden;
  box-shadow: var(--shadow-light);
}

.list-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-medium);
  position: relative;
}

.list-item::after {
  content: '';
  position: absolute;
  left: var(--spacing-medium);
  right: var(--spacing-medium);
  bottom: 0;
  height: 1px;
  background-color: var(--divider-color);
}

.list-item:last-child::after {
  display: none;
}

.list-item-content {
  flex: 1;
  overflow: hidden;
}

.list-item-title {
  font-size: var(--font-size-content);
  color: var(--title-color);
  margin-bottom: var(--spacing-mini);
}

.list-item-description {
  font-size: var(--font-size-auxiliary);
  color: var(--text-color-secondary);
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-medium) 0;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--border-color);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: var(--font-size-auxiliary);
  color: var(--text-color-secondary);
  margin-left: var(--spacing-small);
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xlarge) 0;
}

.empty-icon {
  font-size: 96rpx;
  color: var(--text-color-secondary);
  margin-bottom: var(--spacing-medium);
}

.empty-text {
  font-size: var(--font-size-auxiliary);
  color: var(--text-color-secondary);
  text-align: center;
}

.empty-action {
  margin-top: var(--spacing-medium);
}

/* 工具类 */
.full-width {
  width: 100%;
}

.full-height {
  height: 100%;
}

.overflow-hidden {
  overflow: hidden;
}

.position-relative {
  position: relative;
}

.position-absolute {
  position: absolute;
}

.hide {
  display: none !important;
}

.opacity-0 {
  opacity: 0;
}

.opacity-50 {
  opacity: 0.5;
}

/* 安全区域适配 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.safe-area-top {
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}

/* 动画 */
.fade-in {
  animation: fadeIn var(--transition-duration) var(--transition-timing);
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.fade-out {
  animation: fadeOut var(--transition-duration) var(--transition-timing);
}

@keyframes fadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}

.slide-up {
  animation: slideUp var(--transition-duration) var(--transition-timing);
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.slide-down {
  animation: slideDown var(--transition-duration) var(--transition-timing);
}

@keyframes slideDown {
  from {
    transform: translateY(0);
  }
  to {
    transform: translateY(100%);
  }
}
