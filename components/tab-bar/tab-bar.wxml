<view class="tabs">
  <scroll-view class="tabs-scroll" scroll-x="{{scrollable}}" scroll-with-animation>
    <view class="tabs-content">
      <!-- 调试信息 -->
      <view wx:if="{{!tabs || tabs.length === 0}}" style="color:red;">
        没有传入tabs数据: {{tabs}}
      </view>
      <view 
        wx:for="{{tabs}}" 
        wx:key="index" 
        class="tab-item {{activeTab === index ? 'active' : ''}}" 
        data-index="{{index}}" 
        bindtap="onTabClick">
        {{item}}
      </view>
    </view>
  </scroll-view>
</view> 
 