<view class="tabs">
  <scroll-view class="tabs-scroll" scroll-x="{{scrollable}}" scroll-with-animation>
    <view class="tabs-content">
      <view 
        wx:for="{{tabs}}" 
        wx:key="index" 
        class="tab-item {{activeTab === index ? 'active' : ''}}" 
        data-index="{{index}}" 
        bindtap="onTabClick">
        {{item}}
      </view>
    </view>
  </scroll-view>
</view> 
 