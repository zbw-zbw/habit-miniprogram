/* 引入图标字体 */
@import "/styles/iconfont.wxss";

.search-box {
  display: flex;
  align-items: center;
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  flex: 1;
  height: 100%;
  background-color: #F5F7FA;
  border-radius: 40rpx;
  padding: 0 20rpx;
}

.search-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  color: #909399;
}

.search-input {
  flex: 1;
  height: 100%;
  padding: 0 16rpx;
  font-size: 28rpx;
  color: #303133;
}

.placeholder {
  color: #C0C4CC;
}

.clear-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  color: #C0C4CC;
}

.search-button {
  min-width: 100rpx;
  height: 60rpx;
  margin-left: 20rpx;
  background-color: #4F7CFF;
  color: #FFFFFF;
  font-size: 28rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 深色模式样式 */
.dark-mode .search-box {
  background-color: #222;
}

.dark-mode .search-input-wrapper {
  background-color: #333;
}

.dark-mode .search-input {
  color: #fff;
}

.dark-mode .placeholder {
  color: #909399;
} 
