/* 空状态组件样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16px;
  box-sizing: border-box;
  min-height: 300rpx;
}

.empty-state-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 16px;
}

.empty-state-icon image {
  width: 100%;
  height: 100%;
  opacity: 0.7;
}

.empty-state-title {
  font-size: 18px;
  font-weight: 500;
  color: #303133;
  margin-bottom: 8px;
  text-align: center;
}

.empty-state-description {
  font-size: 14px;
  color: #909399;
  text-align: center;
  line-height: 1.5;
  margin-bottom: 24px;
  max-width: 80%;
}

.empty-state-actions {
  display: flex;
  flex-direction: row;
  gap: 16px;
}

.empty-state-button {
  min-width: 120rpx;
  padding: 8px 16px;
  font-size: 14px;
  border-radius: 8px;
  color: white;
}

.empty-state-button.primary {
  background-color: #4F7CFF;
  color: white;
}
