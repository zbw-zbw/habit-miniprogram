/* 空状态组件样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx 32rpx;
  box-sizing: border-box;
  min-height: 400rpx;
}

.empty-state-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
  100% {
    transform: translateY(0);
  }
}

.empty-state-icon image {
  width: 100%;
  height: 100%;
  opacity: 0.8;
}

.empty-state-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--title-color);
  margin-bottom: 16rpx;
  text-align: center;
}

.empty-state-description {
  font-size: 28rpx;
  color: var(--text-color-secondary);
  text-align: center;
  line-height: 1.5;
  margin-bottom: 40rpx;
  max-width: 80%;
}

.empty-state-actions {
  display: flex;
  flex-direction: row;
  gap: 32rpx;
}

.empty-state-button {
  min-width: 200rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border-radius: var(--radius-medium);
  color: white;
  transition: all 0.3s ease;
  box-shadow: var(--shadow-button);
}

.empty-state-button.primary {
  background: var(--primary-gradient);
  color: white;
}

.empty-state-button.primary:active {
  transform: scale(0.95);
}
