/* components/post-card/post-card.wxss */
@import "/styles/iconfont.wxss";

.post-item {
  background-color: #FFFFFF;
  padding: 30rpx 24rpx;
  margin-bottom: 16rpx;
  position: relative;
  border-bottom: 1rpx solid #F2F2F2;
  box-shadow: none;
  border-radius: 0;
}

.post-item:last-child {
  border-bottom: none;
}

.post-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.post-user {
  display: flex;
  align-items: flex-start;
}

.post-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.post-user-info {
  display: flex;
  flex-direction: column;
}

.post-username {
  font-size: 30rpx;
  font-weight: 500;
  color: #576B95;
  margin-bottom: 6rpx;
}

.post-meta {
  font-size: 24rpx;
  color: #B2B2B2;
}

.post-more {
  padding: 10rpx;
}

.post-more .iconfont {
  font-size: 36rpx;
  color: #C0C4CC;
}

.post-content {
  padding-left: 100rpx; /* 与头像对齐 */
  padding-bottom: 16rpx;
}

.post-text {
  font-size: 30rpx;
  color: #333333;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: block;
  white-space: pre-wrap;
  text-align: justify;
}

.post-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.post-tag {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #576B95;
  background-color: rgba(87, 107, 149, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

.post-tag .iconfont {
  font-size: 24rpx;
  margin-right: 4rpx;
}

/* 微信朋友圈风格的图片布局 */
.post-images {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

/* 单张图片 */
.post-image.single {
  width: 400rpx;
  height: 400rpx;
  margin: 0;
  border-radius: 4rpx;
}

/* 两张图片 */
.post-images.count-2 .post-image {
  width: 300rpx;
  height: 300rpx;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
  border-radius: 4rpx;
}

/* 三张及以上图片 */
.post-images.count-3 .post-image,
.post-images.count-4 .post-image,
.post-images.count-5 .post-image,
.post-images.count-6 .post-image,
.post-images.count-7 .post-image,
.post-images.count-8 .post-image,
.post-images.count-9 .post-image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
  border-radius: 4rpx;
}

.post-actions {
  display: flex;
  align-items: center;
  padding-top: 12rpx;
  padding-left: 100rpx; /* 与头像对齐 */
  border-top: none;
}

.post-action {
  display: flex;
  align-items: center;
  margin-right: 48rpx;
  padding: 8rpx 0;
  background-color: transparent;
  font-size: 24rpx;
  color: #B2B2B2;
  line-height: normal;
}

.post-action:last-child {
  margin-right: 0;
}

.post-action .iconfont {
  font-size: 36rpx;
  color: #B2B2B2;
  margin-right: 8rpx;
}

.post-action.active .iconfont {
  color: #F56C6C;
}

.post-action text:last-child {
  font-size: 26rpx;
  color: #B2B2B2;
}

.share-btn {
  font-size: 24rpx;
  color: #B2B2B2;
  padding: 0;
  margin: 0;
}

.share-btn::after {
  display: none;
} 
