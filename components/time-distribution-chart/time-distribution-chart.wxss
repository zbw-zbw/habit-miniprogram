/* 打卡时间分布图表样式 */
.time-distribution-chart {
  width: 100%;
  height: 300rpx;
  padding: 10rpx 0;
}

.no-data {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #909399;
}

.no-data .subtitle {
  font-size: 24rpx;
  margin-top: 10rpx;
  opacity: 0.7;
}

.chart-container {
  height: 100%;
  padding: 0 10rpx;
}

.chart-bars {
  height: 100%;
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
}

.chart-bar-item {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  padding: 0 10rpx;
}

.bar-label {
  font-size: 24rpx;
  color: #606266;
  margin-bottom: 10rpx;
}

.bar-wrapper {
  width: 100%;
  height: 70%;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.bar {
  width: 60%;
  min-height: 4rpx;
  border-radius: 8rpx 8rpx 0 0;
  transition: height 0.3s ease;
}

.bar-value {
  font-size: 24rpx;
  color: #606266;
  margin-top: 10rpx;
  font-weight: bold;
} 
