/**
 * 习惯卡片组件样式
 */
.habit-card-wrapper {
  margin-bottom: 24rpx;
}

.habit-card {
  display: flex;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

/* 左侧图标 */
.habit-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.habit-icon .iconfont {
  font-size: 40rpx;
}

/* 中间内容 */
.habit-content {
  flex: 1;
  overflow: hidden;
}

.habit-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #32325D;
  margin-bottom: 8rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.habit-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.habit-category {
  font-size: 24rpx;
  color: #FFFFFF;
  padding: 6rpx 14rpx;
  border-radius: 20rpx;
  margin-right: 16rpx;
  font-weight: 500;
}

.habit-frequency {
  font-size: 24rpx;
  color: #606266;
}

.habit-stats {
  display: flex;
  align-items: center;
  background-color: #F8FAFC;
  border-radius: 12rpx;
  padding: 10rpx 16rpx;
  margin-top: 4rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 32rpx;
  padding: 6rpx 0;
}

.stat-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #4F7CFF;
}

.stat-label {
  font-size: 22rpx;
  color: #606266;
  margin-top: 4rpx;
}

/* 右侧操作 */
.habit-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-between;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.checkin-btn {
  background-color: #5E72E4;
  color: #FFFFFF;
  font-size: 28rpx;
  padding: 8rpx 24rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.checkin-btn.completed {
  background-color: #E4E7ED;
  color: #8898AA;
}

.more-btn {
  font-size: 40rpx;
  color: #909399;
  padding: 8rpx;
}

/* 操作菜单 */
.action-menu {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.action-menu.show {
  visibility: visible;
  opacity: 1;
}

.action-menu-content {
  width: 80%;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
}

.action-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1px solid #E4E7ED;
}

.action-item:last-child {
  border-bottom: none;
}

.action-item .iconfont {
  font-size: 40rpx;
  margin-right: 16rpx;
  color: #4F7CFF;
}

.action-item text {
  font-size: 32rpx;
  color: #303133;
}

.action-item.delete .iconfont {
  color: #F56C6C;
}

.action-item.delete text {
  color: #F56C6C;
}

/* 紧凑模式 */
.compact .habit-card {
  padding: 16rpx;
}

.compact .habit-icon {
  width: 64rpx;
  height: 64rpx;
}

.compact .habit-icon .iconfont {
  font-size: 32rpx;
}

.compact .habit-name {
  font-size: 28rpx;
}

.compact .habit-info {
  margin-bottom: 8rpx;
}

.compact .habit-category {
  font-size: 22rpx;
  padding: 4rpx 10rpx;
}

.compact .habit-frequency {
  font-size: 22rpx;
}

.compact .habit-stats {
  padding: 6rpx 12rpx;
}

.compact .stat-item {
  margin-right: 24rpx;
  padding: 4rpx 0;
}

.compact .stat-value {
  font-size: 24rpx;
}

.compact .stat-label {
  font-size: 20rpx;
}

.compact .checkin-btn {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
}

/* 简单模式 */
.simple .habit-card {
  padding: 20rpx;
}

.simple .habit-stats {
  background-color: transparent;
  padding: 0;
}

.simple .habit-info {
  margin-bottom: 10rpx;
}

.simple .stat-item {
  background-color: #F8FAFC;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  margin-right: 16rpx;
} 
