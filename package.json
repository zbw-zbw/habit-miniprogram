{
  "name": "habit-tracker",
  "version": "1.0.0",
  "description": "习惯打卡小程序",
  "main": "app.js",
  "scripts": {
    "compile": "tsc",
    "watch": "tsc -w",
    "lint": "eslint --ext .js,.ts .",
    "test": "jest",
    "test:frontend": "jest --testPathIgnorePatterns=server/",
    "test:backend": "cd server && npm test",
    "build": "tsc && miniprogram-ci build"
  },
  "keywords": [
    "微信小程序",
    "习惯",
    "打卡"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-typescript": "^7.21.4",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "miniprogram-api-typings": "^3.9.1",
    "miniprogram-ci": "^1.9.6",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "wx": {},
      "App": "jest.fn()",
      "Page": "jest.fn()",
      "Component": "jest.fn()",
      "getApp": "jest.fn()"
    },
    "setupFiles": [
      "./__tests__/setup.js"
    ]
  },
  "dependencies": {
    "weui-miniprogram": "1.5.6"
  }
}
