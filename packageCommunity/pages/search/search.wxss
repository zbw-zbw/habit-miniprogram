/* packageCommunity/pages/search/search.wxss */
page {
  background-color: #FFFFFF;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  background-color: #FFFFFF;
  border-bottom: 1px solid #EBEEF5;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-input-container {
  display: flex;
  align-items: center;
  flex: 1;
  height: 36px;
  background-color: #F5F7FA;
  border-radius: 18px;
  padding: 0 12px;
}

.search-input-container .iconfont {
  font-size: 16px;
  color: #909399;
  margin-right: 8px;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 14px;
}

.cancel-btn {
  padding: 0 12px;
  font-size: 14px;
  color: #606266;
}

/* 搜索内容区域 */
.search-content {
  flex: 1;
}

/* 搜索历史和热门搜索 */
.search-initial {
  padding: 16px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.section-title {
  font-size: 16px;
  font-weight: 500;
  color: #303133;
}

.clear-btn {
  font-size: 14px;
  color: #909399;
}

/* 搜索历史 */
.search-history {
  margin-bottom: 24px;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 8px 12px;
  background-color: #F5F7FA;
  border-radius: 16px;
  margin-right: 8px;
  margin-bottom: 8px;
}

.history-item .iconfont {
  font-size: 14px;
  color: #909399;
  margin-right: 4px;
}

.history-text {
  font-size: 14px;
  color: #606266;
}

/* 热门搜索 */
.hot-tags {
  display: flex;
  flex-wrap: wrap;
}

.hot-tag {
  padding: 8px 16px;
  background-color: #F5F7FA;
  border-radius: 16px;
  margin-right: 8px;
  margin-bottom: 8px;
  font-size: 14px;
  color: #606266;
}

/* 标签页 */
.tabs {
  display: flex;
  background-color: #FFFFFF;
  border-bottom: 1px solid #EBEEF5;
  position: sticky;
  top: 60px;
  z-index: 10;
}

.tab-item {
  flex: 1;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  color: #606266;
  position: relative;
}

.tab-item.active {
  color: #4F7CFF;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 20px;
  height: 3px;
  background-color: #4F7CFF;
  border-radius: 1.5px;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32px 0;
}

.loading-spinner {
  width: 32px;
  height: 32px;
  border: 3px solid #E4E7ED;
  border-top-color: #4F7CFF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.loading-spinner.small {
  width: 20px;
  height: 20px;
  border-width: 2px;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 8px;
  font-size: 14px;
  color: #909399;
}

/* 搜索结果列表 */
.result-list {
  padding: 0 16px;
}

/* 动态结果 */
.post-item {
  padding: 16px 0;
  border-bottom: 1px solid #EBEEF5;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}

.user-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 12px;
}

.post-user-info {
  flex: 1;
}

.username {
  font-size: 14px;
  font-weight: 500;
  color: #303133;
  margin-bottom: 4px;
  display: block;
}

.post-time {
  font-size: 12px;
  color: #909399;
}

.post-content {
  margin-bottom: 12px;
}

.post-text {
  font-size: 14px;
  color: #303133;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.post-stats {
  display: flex;
}

.post-stat {
  font-size: 12px;
  color: #909399;
  margin-right: 16px;
}

/* 用户结果 */
.user-item {
  display: flex;
  align-items: center;
  padding: 16px 0;
  border-bottom: 1px solid #EBEEF5;
}

.user-info {
  flex: 1;
}

.user-bio {
  font-size: 12px;
  color: #909399;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.follow-btn {
  padding: 6px 16px;
  background-color: #4F7CFF;
  color: #FFFFFF;
  border-radius: 16px;
  font-size: 14px;
  margin: 0;
  line-height: 1.5;
}

.follow-btn.following {
  background-color: #F5F7FA;
  color: #606266;
  border: 1px solid #DCDFE6;
}

/* 习惯结果 */
.habit-item {
  display: flex;
  align-items: center;
  padding: 16px 0;
  border-bottom: 1px solid #EBEEF5;
}

.habit-icon {
  width: 40px;
  height: 40px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
}

.habit-icon image {
  width: 24px;
  height: 24px;
}

.habit-info {
  flex: 1;
}

.habit-name {
  font-size: 14px;
  font-weight: 500;
  color: #303133;
  margin-bottom: 4px;
  display: block;
}

.habit-users {
  font-size: 12px;
  color: #909399;
}

.add-btn {
  padding: 6px 16px;
  background-color: #4F7CFF;
  color: #FFFFFF;
  border-radius: 16px;
  font-size: 14px;
  margin: 0;
  line-height: 1.5;
}

.add-btn.added {
  background-color: #F5F7FA;
  color: #606266;
  border: 1px solid #DCDFE6;
}

/* 话题结果 */
.topic-item {
  display: flex;
  align-items: center;
  padding: 16px 0;
  border-bottom: 1px solid #EBEEF5;
}

.topic-image {
  width: 40px;
  height: 40px;
  border-radius: 8px;
  margin-right: 12px;
  object-fit: cover;
}

.topic-info {
  flex: 1;
}

.topic-name {
  font-size: 14px;
  font-weight: 500;
  color: #303133;
  margin-bottom: 4px;
  display: block;
}

.topic-posts {
  font-size: 12px;
  color: #909399;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64px 0;
}

.empty-icon {
  width: 80px;
  height: 80px;
  margin-bottom: 16px;
}

.empty-text {
  font-size: 16px;
  color: #303133;
  margin-bottom: 8px;
}

.empty-tips {
  font-size: 14px;
  color: #909399;
}

/* 加载更多和没有更多 */
.loading-more, .no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16px;
}

.loading-more {
  gap: 8px;
}

.no-more {
  color: #909399;
  font-size: 14px;
} 
