/* packageCommunity/pages/search/search.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #F5F7FA;
}

/* 搜索框 */
.search-bar {
  display: flex;
  padding: 12px 16px;
  background-color: #FFFFFF;
  border-bottom: 1px solid #DCDFE6;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #F5F7FA;
  border-radius: 20px;
  padding: 0 12px;
  height: 36px;
  margin-right: 12px;
}

.search-input-wrapper .iconfont {
  font-size: 16px;
  color: #909399;
  margin-right: 8px;
}

.search-input-wrapper .icon-close {
  margin-right: 0;
  margin-left: 8px;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 14px;
  color: #303133;
}

.search-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  color: #4F7CFF;
}

/* 搜索建议 */
.search-suggestions {
  padding: 16px;
}

.search-section {
  margin-bottom: 24px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.section-title {
  font-size: 16px;
  font-weight: 500;
  color: #303133;
}

.section-action {
  font-size: 14px;
  color: #909399;
}

.section-more {
  font-size: 14px;
  color: #4F7CFF;
}

/* 关键词列表 */
.keyword-list {
  display: flex;
  flex-direction: column;
}

.keyword-item {
  display: flex;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid #EBEEF5;
}

.keyword-item:last-child {
  border-bottom: none;
}

.keyword-item .iconfont {
  font-size: 16px;
  color: #909399;
  margin-right: 8px;
}

.keyword-text {
  font-size: 14px;
  color: #606266;
}

/* 标签云 */
.keyword-tags {
  display: flex;
  flex-wrap: wrap;
}

.keyword-tag {
  padding: 6px 12px;
  background-color: #FFFFFF;
  border-radius: 16px;
  margin-right: 8px;
  margin-bottom: 8px;
  font-size: 14px;
  color: #606266;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32px 0;
}

.loading-spinner {
  width: 32px;
  height: 32px;
  border: 3px solid #E4E7ED;
  border-top-color: #4F7CFF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.loading-text {
  margin-top: 8px;
  font-size: 14px;
  color: #909399;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 标签页 */
.tabs {
  display: flex;
  background-color: #FFFFFF;
  border-bottom: 1px solid #DCDFE6;
  position: sticky;
  top: 60px;
  z-index: 99;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 44px;
  font-size: 14px;
  color: #606266;
  position: relative;
}

.tab-item.active {
  color: #4F7CFF;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 20px;
  height: 3px;
  background-color: #4F7CFF;
  border-radius: 1.5px;
}

/* 结果区域 */
.result-section {
  padding: 16px;
}

/* 用户列表 */
.user-list {
  background-color: #FFFFFF;
  border-radius: 8px;
  overflow: hidden;
}

.user-item {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  border-bottom: 1px solid #EBEEF5;
}

.user-item:last-child {
  border-bottom: none;
}

.user-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 12px;
}

.user-info {
  flex: 1;
  margin-right: 12px;
}

.user-name {
  font-size: 14px;
  font-weight: 500;
  color: #303133;
  margin-bottom: 4px;
}

.user-bio {
  font-size: 12px;
  color: #909399;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 200px;
}

.follow-btn {
  padding: 6px 12px;
  background-color: #4F7CFF;
  border-radius: 16px;
  font-size: 12px;
  color: #FFFFFF;
}

.follow-btn.following {
  background-color: #F5F7FA;
  color: #606266;
  border: 1px solid #DCDFE6;
}

/* 动态列表 */
.post-list {
  background-color: #FFFFFF;
  border-radius: 8px;
  overflow: hidden;
}

.post-item {
  padding: 16px;
  border-bottom: 1px solid #EBEEF5;
}

.post-item:last-child {
  border-bottom: none;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}

.post-avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  margin-right: 8px;
}

.post-user {
  flex: 1;
}

.post-username {
  font-size: 14px;
  font-weight: 500;
  color: #303133;
  margin-bottom: 2px;
}

.post-time {
  font-size: 12px;
  color: #909399;
}

.post-content {
  font-size: 14px;
  color: #303133;
  line-height: 1.5;
  margin-bottom: 8px;
}

.post-images {
  margin-bottom: 8px;
}

.post-image {
  width: 100%;
  height: 150px;
  border-radius: 8px;
}

.post-stats {
  display: flex;
  font-size: 12px;
  color: #909399;
}

.post-stat {
  margin-right: 16px;
}

/* 习惯列表 */
.habit-list {
  background-color: #FFFFFF;
  border-radius: 8px;
  overflow: hidden;
}

.habit-item {
  display: flex;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid #EBEEF5;
}

.habit-item:last-child {
  border-bottom: none;
}

.habit-icon {
  width: 40px;
  height: 40px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
}

.habit-icon image {
  width: 24px;
  height: 24px;
}

.habit-info {
  flex: 1;
  margin-right: 12px;
}

.habit-name {
  font-size: 14px;
  font-weight: 500;
  color: #303133;
  margin-bottom: 4px;
}

.habit-frequency {
  font-size: 12px;
  color: #909399;
}

.habit-streak {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.streak-count {
  font-size: 16px;
  font-weight: 500;
  color: #4F7CFF;
}

.streak-label {
  font-size: 12px;
  color: #909399;
}

/* 挑战列表 */
.challenge-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
}

.challenge-item {
  position: relative;
  border-radius: 8px;
  overflow: hidden;
  height: 100px;
}

.challenge-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.challenge-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.6));
}

.challenge-info {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 12px;
}

.challenge-title {
  font-size: 14px;
  font-weight: 500;
  color: #FFFFFF;
  margin-bottom: 4px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.challenge-participants {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.8);
}

/* 空结果 */
.empty-result, .no-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32px 0;
}

.empty-text {
  font-size: 14px;
  color: #909399;
}

.no-result-icon {
  width: 80px;
  height: 80px;
  margin-bottom: 16px;
}

.no-result-text {
  font-size: 16px;
  font-weight: 500;
  color: #303133;
  margin-bottom: 8px;
}

.no-result-tips {
  font-size: 14px;
  color: #909399;
} 
