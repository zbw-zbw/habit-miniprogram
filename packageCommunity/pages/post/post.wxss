/* packageCommunity/pages/post/post.wxss */
page {
  background-color: #FFFFFF;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  padding-bottom: 30px;
}

/* 导航栏 */
.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 16px;
  height: 44px;
  background-color: #FFFFFF;
  border-bottom: 1px solid #EBEEF5;
  position: sticky;
  top: 0;
  z-index: 100;
}

.navbar-left {
  display: flex;
  align-items: center;
}

.navbar-left .iconfont {
  font-size: 20px;
  color: #303133;
}

.navbar-title {
  font-size: 18px;
  font-weight: 500;
  color: #303133;
}

.navbar-right {
  display: flex;
  align-items: center;
}

.post-btn {
  padding: 6px 16px;
  background-color: #F5F7FA;
  border-radius: 16px;
  font-size: 14px;
  color: #909399;
}

.post-btn.active {
  background-color: #4F7CFF;
  color: #FFFFFF;
}

/* 内容输入区 */
.post-content {
  padding: 16px;
  position: relative;
}

.content-textarea {
  width: 100%;
  height: 150px;
  font-size: 16px;
  line-height: 1.5;
  color: #303133;
  padding: 0;
}

.word-count {
  position: absolute;
  right: 16px;
  bottom: 16px;
  font-size: 12px;
  color: #909399;
}

/* 图片列表 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 16px;
  margin-bottom: 16px;
}

.image-item {
  width: calc((100% - 16px) / 3);
  height: 100px;
  margin-right: 8px;
  margin-bottom: 8px;
  position: relative;
  border-radius: 8px;
  overflow: hidden;
}

.image-item:nth-child(3n) {
  margin-right: 0;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.remove-image {
  position: absolute;
  top: 4px;
  right: 4px;
  width: 20px;
  height: 20px;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.remove-image .iconfont {
  font-size: 14px;
  color: #FFFFFF;
}

.add-image {
  width: calc((100% - 16px) / 3);
  height: 100px;
  background-color: #F5F7FA;
  border: 1px dashed #DCDFE6;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-image .iconfont {
  font-size: 24px;
  color: #909399;
}

.add-image-btn {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  background-color: #F5F7FA;
  margin: 0 16px 16px;
  border-radius: 8px;
}

.add-image-btn .iconfont {
  font-size: 20px;
  color: #606266;
  margin-right: 8px;
}

.add-image-btn text {
  font-size: 14px;
  color: #606266;
}

/* 习惯关联 */
.habit-section {
  padding: 16px;
  border-top: 8px solid #F5F7FA;
}

.section-title {
  font-size: 16px;
  font-weight: 500;
  color: #303133;
  margin-bottom: 12px;
}

.habit-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px;
  background-color: #F5F7FA;
  border-radius: 8px;
}

.habit-selector .placeholder {
  color: #909399;
}

.habit-selector .iconfont {
  font-size: 16px;
  color: #909399;
}

/* 标签选择 */
.tag-section {
  padding: 16px;
  border-top: 8px solid #F5F7FA;
}

.selected-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 12px;
}

.tag-item {
  display: flex;
  align-items: center;
  padding: 6px 12px;
  background-color: #F0F5FF;
  border-radius: 16px;
  margin-right: 8px;
  margin-bottom: 8px;
}

.tag-item text {
  font-size: 14px;
  color: #4F7CFF;
}

.remove-tag {
  margin-left: 4px;
  font-size: 16px;
  color: #4F7CFF;
}

.tag-input-wrapper {
  display: flex;
  align-items: center;
  padding: 12px;
  background-color: #F5F7FA;
  border-radius: 8px;
  margin-bottom: 12px;
}

.tag-prefix {
  font-size: 16px;
  color: #4F7CFF;
  margin-right: 4px;
}

.tag-input {
  flex: 1;
  font-size: 14px;
  color: #303133;
}

.tag-recommendations {
  display: flex;
  flex-wrap: wrap;
}

.tag-recommendation {
  padding: 6px 12px;
  background-color: #F5F7FA;
  border-radius: 16px;
  margin-right: 8px;
  margin-bottom: 8px;
  font-size: 14px;
  color: #606266;
}

/* 位置信息 */
.location-section {
  padding: 16px;
  border-top: 8px solid #F5F7FA;
}

.location-toggle {
  display: flex;
  align-items: center;
}

.location-toggle .iconfont {
  font-size: 18px;
  color: #909399;
  margin-right: 8px;
}

.location-toggle .icon-location-filled {
  color: #4F7CFF;
}

.location-toggle text {
  font-size: 14px;
  color: #606266;
}

/* 习惯选择器弹窗 */
.habit-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.habit-modal {
  width: 100%;
  max-height: 70vh;
  background-color: #FFFFFF;
  border-top-left-radius: 16px;
  border-top-right-radius: 16px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.habit-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid #EBEEF5;
}

.habit-modal-title {
  font-size: 18px;
  font-weight: 500;
  color: #303133;
}

.habit-modal-close {
  font-size: 20px;
  color: #909399;
}

.habit-list {
  flex: 1;
  overflow-y: auto;
  padding: 0 16px;
  max-height: calc(70vh - 56px);
}

.habit-item {
  display: flex;
  align-items: center;
  padding: 16px 0;
  border-bottom: 1px solid #EBEEF5;
}

.habit-item:last-child {
  border-bottom: none;
}

.habit-icon {
  width: 40px;
  height: 40px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
}

.habit-icon image {
  width: 24px;
  height: 24px;
}

.habit-info {
  flex: 1;
}

.habit-name {
  font-size: 16px;
  font-weight: 500;
  color: #303133;
  margin-bottom: 4px;
}

.habit-frequency {
  font-size: 12px;
  color: #909399;
}

.habit-item .icon-check {
  font-size: 20px;
  color: #4F7CFF;
}

.habit-item.selected {
  background-color: #F0F5FF;
}
