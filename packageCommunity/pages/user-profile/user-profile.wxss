/* packageCommunity/pages/user-profile/user-profile.wxss */
page {
  background-color: #F5F7FA;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
}

/* 返回按钮 */
.back-btn {
  position: fixed;
  top: 44px;
  left: 16px;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.back-btn .iconfont {
  font-size: 20px;
  color: #FFFFFF;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32px 0;
  flex: 1;
}

.loading-spinner {
  width: 32px;
  height: 32px;
  border: 3px solid #E4E7ED;
  border-top-color: #4F7CFF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.loading-spinner.small {
  width: 20px;
  height: 20px;
  border-width: 2px;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 8px;
  font-size: 14px;
  color: #909399;
}

/* 用户资料 */
.user-profile {
  background-color: #FFFFFF;
  margin-bottom: 12px;
  position: relative;
}

.user-cover {
  width: 100%;
  height: 180px;
  object-fit: cover;
}

.cover-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 180px;
  background: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.5));
}

.user-header {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-end;
  padding: 0 16px 16px;
  margin-top: -60px;
}

.user-avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  border: 3px solid #FFFFFF;
  background-color: #FFFFFF;
  z-index: 1;
}

.user-info {
  flex: 1;
  margin-left: 16px;
  margin-right: 16px;
}

.user-name {
  font-size: 18px;
  font-weight: 500;
  color: #FFFFFF;
  margin-bottom: 4px;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}

.user-bio {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.4;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}

.follow-btn, .edit-btn {
  padding: 6px 16px;
  border-radius: 20px;
  font-size: 14px;
  margin-top: 8px;
}

.follow-btn {
  background-color: #4F7CFF;
  color: #FFFFFF;
}

.follow-btn.following {
  background-color: rgba(255, 255, 255, 0.2);
  color: #FFFFFF;
  border: 1px solid rgba(255, 255, 255, 0.5);
}

.edit-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: #FFFFFF;
  border: 1px solid rgba(255, 255, 255, 0.5);
}

/* 用户统计 */
.user-stats {
  display: flex;
  padding: 16px;
  border-bottom: 1px solid #EBEEF5;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-count {
  font-size: 18px;
  font-weight: 500;
  color: #303133;
  margin-bottom: 4px;
}

.stat-label {
  font-size: 14px;
  color: #909399;
}

/* 标签页导航 */
.tabs {
  display: flex;
  background-color: #FFFFFF;
  border-bottom: 1px solid #EBEEF5;
}

.tab-item {
  flex: 1;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  color: #606266;
  position: relative;
}

.tab-item.active {
  color: #4F7CFF;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 20px;
  height: 3px;
  background-color: #4F7CFF;
  border-radius: 1.5px;
}

/* 内容区域 */
.content-section {
  flex: 1;
  padding-bottom: 24px;
}

/* 动态列表 */
.post-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
  padding: 12px;
}

.post-item {
  background-color: #FFFFFF;
  border-radius: 8px;
  padding: 16px;
}

.post-content {
  margin-bottom: 12px;
}

.post-text {
  font-size: 14px;
  color: #303133;
  line-height: 1.5;
  margin-bottom: 12px;
}

.post-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 12px;
}

.post-tag {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #4F7CFF;
  background-color: rgba(79, 124, 255, 0.1);
  padding: 4px 12px;
  border-radius: 16px;
  margin-right: 8px;
  margin-bottom: 8px;
}

.post-tag .iconfont {
  font-size: 12px;
  margin-right: 4px;
}

.post-images {
  margin-bottom: 12px;
}

.post-image.single {
  width: 100%;
  max-height: 200px;
  border-radius: 8px;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 4px;
}

.post-image.multiple {
  width: 100%;
  height: 100px;
  border-radius: 4px;
}

.post-meta {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12px;
  font-size: 12px;
  color: #909399;
}

.post-actions {
  display: flex;
  border-top: 1px solid #EBEEF5;
  padding-top: 12px;
}

.post-action {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  color: #909399;
}

.post-action .iconfont {
  margin-right: 4px;
  font-size: 16px;
}

.post-action.active {
  color: #4F7CFF;
}

/* 习惯列表 */
.habits-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
  padding: 12px;
}

.habit-item {
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  border-radius: 8px;
  padding: 16px;
}

.habit-icon {
  width: 48px;
  height: 48px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
}

.habit-icon image {
  width: 28px;
  height: 28px;
}

.habit-info {
  flex: 1;
  margin-right: 12px;
}

.habit-name {
  font-size: 16px;
  font-weight: 500;
  color: #303133;
  margin-bottom: 4px;
  display: block;
}

.habit-frequency {
  font-size: 12px;
  color: #909399;
  margin-bottom: 8px;
  display: block;
}

.habit-progress {
  display: flex;
  align-items: center;
}

.progress-bar {
  flex: 1;
  height: 4px;
  background-color: #EBEEF5;
  border-radius: 2px;
  overflow: hidden;
  margin-right: 8px;
}

.progress-inner {
  height: 100%;
  background-color: #4F7CFF;
  border-radius: 2px;
}

.progress-text {
  font-size: 12px;
  color: #909399;
  width: 36px;
  text-align: right;
}

.habit-streak {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.streak-count {
  font-size: 18px;
  font-weight: 500;
  color: #4F7CFF;
}

.streak-label {
  font-size: 12px;
  color: #909399;
}

/* 成就列表 */
.achievements-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
  padding: 12px;
}

.achievement-item {
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  border-radius: 8px;
  padding: 16px;
}

.achievement-icon {
  width: 48px;
  height: 48px;
  margin-right: 12px;
}

.achievement-icon.locked {
  opacity: 0.3;
}

.achievement-info {
  flex: 1;
}

.achievement-name {
  font-size: 16px;
  font-weight: 500;
  color: #303133;
  margin-bottom: 4px;
  display: block;
}

.achievement-description {
  font-size: 12px;
  color: #606266;
  margin-bottom: 8px;
  line-height: 1.4;
  display: block;
}

.achievement-progress {
  display: flex;
  align-items: center;
}

.achievement-date {
  font-size: 12px;
  color: #909399;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32px 0;
}

.empty-icon {
  width: 80px;
  height: 80px;
  margin-bottom: 16px;
}

.empty-text {
  font-size: 16px;
  color: #303133;
  margin-bottom: 8px;
}

.empty-tips {
  font-size: 14px;
  color: #909399;
  margin-bottom: 16px;
}

.create-btn {
  padding: 8px 24px;
  background-color: #4F7CFF;
  color: #FFFFFF;
  border-radius: 20px;
  font-size: 14px;
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64px 0;
  flex: 1;
}

.error-icon {
  width: 80px;
  height: 80px;
  margin-bottom: 16px;
}

.error-text {
  font-size: 16px;
  color: #606266;
  margin-bottom: 24px;
}

.back-btn {
  padding: 8px 24px;
  background-color: #4F7CFF;
  color: #FFFFFF;
  border-radius: 20px;
  font-size: 14px;
}

/* 加载更多和没有更多 */
.loading-more, .no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16px;
}

.loading-more {
  gap: 8px;
}

.no-more {
  color: #909399;
  font-size: 14px;
} 
