/* packageCommunity/pages/notifications/notifications.wxss */
page {
  background-color: #F5F7FA;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
}

/* 标签页 */
.tabs {
  display: flex;
  background-color: #FFFFFF;
  border-bottom: 1px solid #EBEEF5;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  color: #606266;
  position: relative;
}

.tab-item.active {
  color: #4F7CFF;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 20px;
  height: 3px;
  background-color: #4F7CFF;
  border-radius: 1.5px;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32px 0;
  flex: 1;
}

.loading-spinner {
  width: 32px;
  height: 32px;
  border: 3px solid #E4E7ED;
  border-top-color: #4F7CFF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.loading-spinner.small {
  width: 20px;
  height: 20px;
  border-width: 2px;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 8px;
  font-size: 14px;
  color: #909399;
}

/* 通知列表 */
.notifications-list {
  display: flex;
  flex-direction: column;
}

.notification-item {
  display: flex;
  padding: 16px;
  background-color: #FFFFFF;
  border-bottom: 1px solid #EBEEF5;
  position: relative;
}

.notification-item.unread {
  background-color: #F0F5FF;
}

.user-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 12px;
}

.notification-content {
  flex: 1;
  margin-right: 12px;
}

.notification-text {
  font-size: 14px;
  color: #303133;
  line-height: 1.5;
  margin-bottom: 4px;
}

.username {
  font-weight: 500;
  margin-right: 4px;
}

.action {
  color: #606266;
}

.target {
  color: #4F7CFF;
}

.notification-time {
  font-size: 12px;
  color: #909399;
  margin-bottom: 8px;
}

.notification-preview {
  font-size: 12px;
  color: #606266;
  background-color: #F5F7FA;
  padding: 8px;
  border-radius: 4px;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.notification-target {
  width: 60px;
  height: 60px;
  border-radius: 4px;
  overflow: hidden;
}

.target-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64px 0;
  flex: 1;
}

.empty-icon {
  width: 80px;
  height: 80px;
  margin-bottom: 16px;
}

.empty-text {
  font-size: 16px;
  color: #909399;
}

/* 加载更多和没有更多 */
.loading-more, .no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16px;
}

.loading-more {
  gap: 8px;
}

.no-more {
  color: #909399;
  font-size: 14px;
} 
