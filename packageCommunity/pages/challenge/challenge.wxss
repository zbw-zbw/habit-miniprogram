/* packageCommunity/pages/challenge/challenge.wxss */

/* 社区互动-挑战详情页面样式 */
.challenge-container {
  min-height: 100vh;
  background-color: #F5F7FA;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200px;
}

.loading-icon {
  width: 40px;
  height: 40px;
  border: 3px solid #E4E7ED;
  border-top: 3px solid #4F7CFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 挑战头部 */
.challenge-header {
  background-color: #FFFFFF;
  border-bottom: 1px solid #E4E7ED;
  padding-bottom: 16px;
}

.challenge-image {
  width: 100%;
  height: 200px;
}

.challenge-info {
  padding: 16px;
}

.challenge-title {
  font-size: 20px;
  font-weight: 600;
  color: #303133;
  margin-bottom: 8px;
  display: block;
}

.challenge-meta {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16px;
  color: #909399;
  font-size: 14px;
}

.challenge-buttons {
  display: flex;
  justify-content: space-between;
}

.btn-join, .btn-joined {
  flex: 1;
  height: 40px;
  line-height: 40px;
  text-align: center;
  border-radius: 20px;
  font-size: 16px;
  margin-right: 12px;
}

.btn-join {
  background-color: #4F7CFF;
  color: #FFFFFF;
}

.btn-joined {
  background-color: #E4E7ED;
  color: #909399;
}

.btn-share {
  width: 100px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  border-radius: 20px;
  font-size: 16px;
  background-color: #FFFFFF;
  color: #4F7CFF;
  border: 1px solid #4F7CFF;
}

/* 标签栏 */
.tab-bar {
  display: flex;
  background-color: #FFFFFF;
  border-bottom: 1px solid #E4E7ED;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 15px;
  color: #606266;
  position: relative;
}

.tab-item.active {
  color: #4F7CFF;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 20px;
  height: 3px;
  background-color: #4F7CFF;
  border-radius: 1.5px;
}

/* 标签内容 */
.tab-content {
  padding: 16px;
  background-color: #FFFFFF;
  min-height: 300px;
}

/* 挑战介绍 */
.intro-section {
  margin-bottom: 24px;
}

.intro-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  color: #303133;
  margin-bottom: 12px;
  position: relative;
  padding-left: 12px;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4px;
  height: 16px;
  background-color: #4F7CFF;
  border-radius: 2px;
}

.section-content {
  color: #606266;
  font-size: 14px;
  line-height: 1.6;
}

.challenge-description {
  display: block;
  margin-bottom: 8px;
}

.rule-item, .reward-item {
  display: flex;
  margin-bottom: 8px;
}

.rule-num {
  width: 20px;
  color: #4F7CFF;
  font-weight: 500;
}

.rule-text, .reward-text {
  flex: 1;
}

.reward-icon {
  width: 20px;
  text-align: center;
  margin-right: 4px;
}

.creator-info {
  display: flex;
  align-items: center;
  padding: 8px 0;
}

.creator-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 12px;
}

.creator-name {
  flex: 1;
  font-size: 15px;
  color: #303133;
}

.creator-arrow {
  width: 8px;
  height: 8px;
  border-top: 2px solid #C0C4CC;
  border-right: 2px solid #C0C4CC;
  transform: rotate(45deg);
}

/* 排行榜 */
.rank-list {
  background-color: #FFFFFF;
  border-radius: 8px;
  overflow: hidden;
}

.rank-header {
  display: flex;
  padding: 12px 16px;
  border-bottom: 1px solid #E4E7ED;
  color: #909399;
  font-size: 14px;
}

.rank-header-rank {
  width: 60px;
  text-align: center;
}

.rank-header-user {
  flex: 1;
}

.rank-header-progress {
  width: 100px;
  text-align: center;
}

.rank-item {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  border-bottom: 1px solid #E4E7ED;
}

.rank-item:last-child {
  border-bottom: none;
}

.rank-position {
  width: 60px;
  text-align: center;
  font-size: 16px;
  font-weight: 500;
  color: #606266;
}

.rank-position.top1 {
  color: #E6A23C;
}

.rank-position.top2 {
  color: #909399;
}

.rank-position.top3 {
  color: #B88D5B;
}

.rank-user {
  flex: 1;
  display: flex;
  align-items: center;
}

.rank-avatar {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  margin-right: 12px;
}

.rank-name {
  font-size: 15px;
  color: #303133;
}

.rank-progress {
  width: 100px;
  text-align: center;
}

.progress-bar {
  margin-bottom: 4px;
}

.progress-text {
  font-size: 12px;
  color: #606266;
}

/* 动态 */
.post-list {
  margin-bottom: 60px;
}

.post-item {
  background-color: #FFFFFF;
  border-radius: 8px;
  margin-bottom: 12px;
  padding: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}

.post-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 12px;
}

.post-user-info {
  flex: 1;
}

.post-username {
  font-size: 15px;
  font-weight: 500;
  color: #303133;
  display: block;
  margin-bottom: 2px;
}

.post-time {
  font-size: 12px;
  color: #909399;
}

.post-content {
  margin-bottom: 12px;
}

.post-text {
  font-size: 14px;
  color: #303133;
  line-height: 1.6;
  display: block;
  margin-bottom: 8px;
}

.post-images {
  display: flex;
  flex-wrap: wrap;
}

.post-image {
  width: calc(33.33% - 4px);
  height: 80px;
  margin-right: 6px;
  margin-bottom: 6px;
  border-radius: 4px;
}

.post-image:nth-child(3n) {
  margin-right: 0;
}

.post-image.single {
  width: 100%;
  height: 200px;
  margin-right: 0;
}

.post-actions {
  display: flex;
  border-top: 1px solid #E4E7ED;
  padding-top: 12px;
}

.post-action {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #909399;
  font-size: 14px;
}

.action-icon {
  margin-right: 4px;
  font-size: 16px;
}

.action-icon.liked {
  color: #F56C6C;
}

.empty-posts {
  padding: 40px 0;
  text-align: center;
  color: #909399;
  font-size: 14px;
}

.post-create-btn {
  position: fixed;
  bottom: 24px;
  right: 24px;
  width: 120px;
  height: 40px;
  background-color: #4F7CFF;
  color: #FFFFFF;
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 15px;
  box-shadow: 0 4px 12px rgba(79, 124, 255, 0.3);
}

/* 模态框 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.modal.show {
  visibility: visible;
  opacity: 1;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFFFFF;
  border-radius: 16px 16px 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  padding: 16px;
  border-bottom: 1px solid #E4E7ED;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.modal-title {
  font-size: 16px;
  font-weight: 500;
  color: #303133;
}

.modal-close {
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  color: #909399;
}

.modal-body {
  padding: 16px;
}

.modal-footer {
  padding: 16px;
  display: flex;
  justify-content: space-between;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  height: 40px;
  line-height: 40px;
  text-align: center;
  border-radius: 20px;
  font-size: 16px;
}

.btn-cancel {
  background-color: #F5F7FA;
  color: #606266;
  margin-right: 12px;
}

.btn-confirm {
  background-color: #4F7CFF;
  color: #FFFFFF;
}

/* 加入挑战模态框 */
.join-tips {
  font-size: 16px;
  color: #303133;
  font-weight: 500;
  display: block;
  margin-bottom: 8px;
}

.join-desc {
  font-size: 14px;
  color: #606266;
}

/* 分享模态框 */
.share-options {
  display: flex;
  justify-content: space-around;
  padding: 16px 0;
}

.share-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 60px;
  background-color: transparent;
  padding: 0;
  line-height: normal;
}

.share-option::after {
  border: none;
}

.share-icon {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-bottom: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 24px;
}

.share-icon.wechat {
  background-color: #07C160;
}

.share-icon.moments {
  background-color: #07C160;
}

.share-icon.qq {
  background-color: #12B7F5;
}

.share-icon.weibo {
  background-color: #E6162D;
}

.share-text {
  font-size: 12px;
  color: #606266;
}
