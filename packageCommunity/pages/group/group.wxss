/* packageCommunity/pages/group/group.wxss */
page {
  background-color: #F5F7FA;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32px 0;
  flex: 1;
}

.loading-spinner {
  width: 32px;
  height: 32px;
  border: 3px solid #E4E7ED;
  border-top-color: #4F7CFF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.loading-spinner.small {
  width: 20px;
  height: 20px;
  border-width: 2px;
}

.loading-text {
  margin-top: 8px;
  font-size: 14px;
  color: #909399;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 小组信息 */
.group-info {
  position: relative;
  background-color: #FFFFFF;
  margin-bottom: 12px;
}

.group-cover {
  width: 100%;
  height: 160px;
  object-fit: cover;
}

.group-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 160px;
  background: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.6));
}

.group-header {
  position: relative;
  display: flex;
  align-items: center;
  padding: 16px;
  margin-top: -40px;
}

.group-avatar {
  width: 80px;
  height: 80px;
  border-radius: 8px;
  border: 3px solid #FFFFFF;
  background-color: #FFFFFF;
  z-index: 1;
}

.group-meta {
  flex: 1;
  margin-left: 12px;
}

.group-name {
  font-size: 18px;
  font-weight: 500;
  color: #303133;
  margin-bottom: 4px;
}

.group-description {
  font-size: 14px;
  color: #606266;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 小组统计 */
.group-stats {
  display: flex;
  padding: 16px;
  border-bottom: 1px solid #EBEEF5;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-count {
  font-size: 18px;
  font-weight: 500;
  color: #303133;
  margin-bottom: 4px;
}

.stat-label {
  font-size: 14px;
  color: #909399;
}

/* 加入按钮 */
.join-btn-container {
  padding: 16px;
}

.join-btn {
  width: 100%;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #4F7CFF;
  color: #FFFFFF;
  border-radius: 20px;
  font-size: 16px;
  font-weight: 500;
}

.join-btn.quit {
  background-color: #F5F7FA;
  color: #606266;
  border: 1px solid #DCDFE6;
}

/* 标签页导航 */
.tabs {
  display: flex;
  background-color: #FFFFFF;
  margin-bottom: 12px;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 44px;
  font-size: 14px;
  color: #606266;
  position: relative;
}

.tab-item.active {
  color: #4F7CFF;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 20px;
  height: 3px;
  background-color: #4F7CFF;
  border-radius: 1.5px;
}

/* 内容区域 */
.content-section {
  flex: 1;
  padding-bottom: 24px;
}

/* 动态列表 */
.post-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
  padding: 0 12px;
}

.post-item {
  background-color: #FFFFFF;
  border-radius: 8px;
  padding: 16px;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}

.post-user {
  display: flex;
  align-items: center;
  flex: 1;
}

.post-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 12px;
}

.post-user-info {
  flex: 1;
}

.post-username {
  font-size: 14px;
  font-weight: 500;
  color: #303133;
  margin-bottom: 4px;
}

.post-time {
  font-size: 12px;
  color: #909399;
}

.post-content {
  margin-bottom: 12px;
}

.post-text {
  font-size: 14px;
  color: #303133;
  line-height: 1.5;
  margin-bottom: 12px;
}

.post-images {
  margin-bottom: 12px;
}

.post-image.single {
  width: 100%;
  max-height: 200px;
  border-radius: 8px;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 4px;
}

.post-image.multiple {
  width: 100%;
  height: 100px;
  border-radius: 4px;
}

.post-actions {
  display: flex;
  border-top: 1px solid #EBEEF5;
  padding-top: 12px;
}

.post-action {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  color: #909399;
}

.post-action .iconfont {
  margin-right: 4px;
  font-size: 16px;
}

.post-action.active {
  color: #4F7CFF;
}

/* 成员列表 */
.members-list {
  padding: 0 12px;
}

.member-section {
  background-color: #FFFFFF;
  border-radius: 8px;
  padding: 16px;
  margin-bottom: 12px;
}

.section-title {
  font-size: 16px;
  font-weight: 500;
  color: #303133;
  margin-bottom: 16px;
}

.member-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16px;
}

.member-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.member-avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin-bottom: 8px;
}

.member-name {
  font-size: 12px;
  color: #303133;
  text-align: center;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.member-role {
  font-size: 10px;
  color: #4F7CFF;
  margin-top: 2px;
}

/* 挑战列表 */
.challenges-list {
  padding: 0 12px;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.challenge-item {
  position: relative;
  border-radius: 8px;
  overflow: hidden;
  height: 120px;
}

.challenge-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.challenge-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.6));
}

.challenge-info {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 16px;
}

.challenge-title {
  font-size: 16px;
  font-weight: 500;
  color: #FFFFFF;
  margin-bottom: 4px;
}

.challenge-participants {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 8px;
}

.challenge-progress {
  display: flex;
  align-items: center;
}

.progress-bar {
  flex: 1;
  height: 4px;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 2px;
  overflow: hidden;
  margin-right: 8px;
}

.progress-inner {
  height: 100%;
  background-color: #FFFFFF;
  border-radius: 2px;
}

.progress-text {
  font-size: 12px;
  color: #FFFFFF;
  width: 36px;
  text-align: right;
}

/* 关于小组 */
.about-section {
  padding: 0 12px;
  background-color: #FFFFFF;
  border-radius: 8px;
  margin: 0 12px;
}

.about-item {
  padding: 16px;
  border-bottom: 1px solid #EBEEF5;
}

.about-title {
  font-size: 14px;
  font-weight: 500;
  color: #303133;
  margin-bottom: 8px;
}

.about-content {
  font-size: 14px;
  color: #606266;
  line-height: 1.5;
}

.admin-actions {
  padding: 16px;
  display: flex;
  justify-content: space-between;
}

.admin-btn {
  width: 48%;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F5F7FA;
  color: #606266;
  border-radius: 20px;
  font-size: 14px;
}

.admin-btn.danger {
  background-color: #FFF0F0;
  color: #F56C6C;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32px 0;
}

.empty-icon {
  width: 80px;
  height: 80px;
  margin-bottom: 16px;
}

.empty-text {
  font-size: 14px;
  color: #909399;
  margin-bottom: 16px;
}

.create-btn, .invite-btn {
  padding: 8px 24px;
  background-color: #4F7CFF;
  color: #FFFFFF;
  border-radius: 20px;
  font-size: 14px;
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64px 0;
  flex: 1;
}

.error-icon {
  width: 80px;
  height: 80px;
  margin-bottom: 16px;
}

.error-text {
  font-size: 16px;
  color: #606266;
  margin-bottom: 24px;
}

.back-btn {
  padding: 8px 24px;
  background-color: #4F7CFF;
  color: #FFFFFF;
  border-radius: 20px;
  font-size: 14px;
}

/* 加载更多和没有更多 */
.loading-more, .no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16px;
  margin-top: 8px;
}

.loading-more {
  gap: 8px;
}

.no-more {
  color: #909399;
  font-size: 14px;
}

/* 发布按钮 */
.create-post-btn {
  position: fixed;
  right: 24px;
  bottom: 24px;
  width: 56px;
  height: 56px;
  background-color: #4F7CFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 12px rgba(79, 124, 255, 0.4);
  z-index: 100;
}

.create-post-btn .iconfont {
  font-size: 24px;
  color: #FFFFFF;
}
