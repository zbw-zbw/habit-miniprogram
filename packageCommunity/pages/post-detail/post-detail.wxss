/* packageCommunity/pages/post-detail/post-detail.wxss */
page {
  background-color: #F5F7FA;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32px 0;
  flex: 1;
}

.loading-spinner {
  width: 32px;
  height: 32px;
  border: 3px solid #E4E7ED;
  border-top-color: #4F7CFF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.loading-spinner.small {
  width: 20px;
  height: 20px;
  border-width: 2px;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 8px;
  font-size: 14px;
  color: #909399;
}

/* 动态详情 */
.post-detail {
  background-color: #FFFFFF;
  padding: 16px;
  margin-bottom: 60px;
}

/* 动态头部 */
.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
}

.user-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 12px;
}

.post-user-info {
  flex: 1;
}

.username {
  font-size: 14px;
  font-weight: 500;
  color: #303133;
  margin-bottom: 4px;
  display: block;
}

.post-time {
  font-size: 12px;
  color: #909399;
}

.post-more {
  padding: 8px;
  margin: -8px;
}

.post-more .iconfont {
  font-size: 20px;
  color: #909399;
}

/* 动态内容 */
.post-content {
  margin-bottom: 16px;
}

.post-text {
  font-size: 16px;
  color: #303133;
  line-height: 1.6;
  margin-bottom: 16px;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 标签 */
.post-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16px;
}

.post-tag {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #4F7CFF;
  background-color: rgba(79, 124, 255, 0.1);
  padding: 4px 12px;
  border-radius: 16px;
  margin-right: 8px;
  margin-bottom: 8px;
}

.post-tag .iconfont {
  font-size: 12px;
  margin-right: 4px;
}

/* 图片 */
.post-images {
  margin-bottom: 16px;
}

.post-image.single {
  width: 100%;
  border-radius: 8px;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 4px;
}

.post-image.multiple {
  width: 100%;
  height: 100px;
  border-radius: 4px;
  object-fit: cover;
}

/* 关联习惯 */
.post-habit {
  display: flex;
  align-items: center;
  background-color: #F5F7FA;
  padding: 12px;
  border-radius: 8px;
}

.habit-icon {
  width: 32px;
  height: 32px;
  border-radius: 6px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
}

.habit-icon image {
  width: 20px;
  height: 20px;
}

.habit-name {
  flex: 1;
  font-size: 14px;
  color: #303133;
}

.post-habit .iconfont {
  font-size: 16px;
  color: #909399;
}

/* 互动统计 */
.post-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16px;
  font-size: 12px;
  color: #909399;
}

/* 互动按钮 */
.post-actions {
  display: flex;
  border-top: 1px solid #EBEEF5;
  border-bottom: 1px solid #EBEEF5;
  padding: 12px 0;
  margin-bottom: 16px;
}

.post-action {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  color: #606266;
  background-color: transparent;
  padding: 0;
  margin: 0;
  line-height: normal;
}

.post-action::after {
  display: none;
}

.post-action .iconfont {
  margin-right: 4px;
  font-size: 18px;
}

.post-action.active {
  color: #4F7CFF;
}

/* 点赞用户 */
.liked-users {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
}

.liked-avatars {
  display: flex;
  margin-right: 8px;
}

.liked-avatar {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  border: 1px solid #FFFFFF;
  margin-right: -8px;
}

.liked-more {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  background-color: #F5F7FA;
  border: 1px solid #EBEEF5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 10px;
  color: #909399;
}

.liked-text {
  font-size: 12px;
  color: #909399;
}

/* 评论区 */
.comments-section {
  margin-bottom: 16px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.section-title {
  font-size: 16px;
  font-weight: 500;
  color: #303133;
}

.comment-sort {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #909399;
}

.comment-sort .iconfont {
  margin-left: 4px;
  font-size: 12px;
}

/* 评论列表 */
.comments-list {
  display: flex;
  flex-direction: column;
}

.comment-item {
  display: flex;
  margin-bottom: 16px;
}

.comment-avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  margin-right: 12px;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 4px;
}

.comment-username {
  font-size: 14px;
  font-weight: 500;
  color: #303133;
}

.comment-time {
  font-size: 12px;
  color: #909399;
}

.comment-text {
  font-size: 14px;
  color: #303133;
  line-height: 1.5;
  margin-bottom: 8px;
}

/* 回复列表 */
.replies {
  background-color: #F5F7FA;
  padding: 8px 12px;
  border-radius: 4px;
  margin-bottom: 8px;
}

.reply-item {
  font-size: 13px;
  color: #606266;
  margin-bottom: 6px;
}

.reply-username {
  font-weight: 500;
  color: #303133;
}

.view-more-replies {
  font-size: 12px;
  color: #4F7CFF;
  margin-top: 4px;
}

/* 评论操作 */
.comment-actions {
  display: flex;
}

.comment-action {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #909399;
  margin-right: 16px;
}

.comment-action .iconfont {
  font-size: 14px;
  margin-right: 4px;
}

.comment-action.active {
  color: #4F7CFF;
}

/* 空评论状态 */
.empty-comments {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32px 0;
}

.empty-icon {
  width: 64px;
  height: 64px;
  margin-bottom: 16px;
}

.empty-text {
  font-size: 14px;
  color: #909399;
}

/* 加载更多和没有更多 */
.loading-more, .no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16px;
}

.loading-more {
  gap: 8px;
}

.no-more {
  color: #909399;
  font-size: 14px;
}

/* 评论输入框 */
.comment-input-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  align-items: center;
  padding: 12px 16px;
  background-color: #FFFFFF;
  border-top: 1px solid #EBEEF5;
  box-sizing: border-box;
}

.comment-input {
  flex: 1;
  height: 36px;
  background-color: #F5F7FA;
  border-radius: 18px;
  padding: 0 16px;
  font-size: 14px;
  margin-right: 12px;
}

.send-btn {
  padding: 8px 16px;
  background-color: #E4E7ED;
  color: #909399;
  border-radius: 18px;
  font-size: 14px;
}

.send-btn.active {
  background-color: #4F7CFF;
  color: #FFFFFF;
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64px 0;
  flex: 1;
}

.error-icon {
  width: 80px;
  height: 80px;
  margin-bottom: 16px;
}

.error-text {
  font-size: 16px;
  color: #606266;
  margin-bottom: 24px;
}

.back-btn {
  padding: 8px 24px;
  background-color: #4F7CFF;
  color: #FFFFFF;
  border-radius: 20px;
  font-size: 14px;
} 
