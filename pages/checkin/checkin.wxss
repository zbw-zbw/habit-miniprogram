/* 引入图标字体 */
@import "/styles/iconfont.wxss";

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #F8F9FE;
}

/* 内容区域 */
.content {
  padding: 30rpx;
}

/* 章节标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #32325D;
  margin-bottom: 20rpx;
}

/* 习惯列表 */
.habits-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

/* 习惯卡片 */
.current-habit-card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
}

.habit-card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.habit-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.habit-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.habit-icon .iconfont {
  font-size: 48rpx;
}

.habit-meta {
  flex: 1;
}

.habit-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #32325D;
  margin-bottom: 6rpx;
}

.habit-desc {
  font-size: 24rpx;
  color: #8898AA;
}

.habit-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.streak-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #2DCE89;
}

.checkin-btn {
  padding: 16rpx 40rpx;
  border-radius: 16rpx;
  background-color: #5E72E4;
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 1;
  transition: all 0.2s;
}

.checkin-btn:active {
  transform: scale(0.95);
}

.checkin-btn.cancel {
  background-color: #8898AA;
}

.checkin-btn.completed {
  background-color: #F2F3F5;
  color: #8898AA;
}

/* 打卡表单 */
.checkin-form {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #E2E8F0;
}

.form-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #32325D;
  margin-bottom: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #8898AA;
  margin-bottom: 16rpx;
}

.form-input {
  background-color: #F1F5F9;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #32325D;
  width: 100%;
  box-sizing: border-box;
}

.form-textarea {
  background-color: #F1F5F9;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #32325D;
  width: 100%;
  height: 180rpx;
  box-sizing: border-box;
}

/* 计时器 */
.timer-display {
  font-size: 96rpx;
  font-weight: 300;
  text-align: center;
  color: #32325D;
  margin: 30rpx 0;
  font-family: monospace;
  font-variant-numeric: tabular-nums;
}

.timer-controls {
  display: flex;
  justify-content: center;
  gap: 40rpx;
}

.timer-btn {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.timer-btn.reset {
  background-color: #F2F3F5;
}

.timer-btn.reset .iconfont {
  color: #8898AA;
  font-size: 40rpx;
}

.timer-btn.start {
  background-color: #2DCE89;
}

.timer-btn.stop {
  background-color: #F5365C;
}

.timer-btn.start .iconfont,
.timer-btn.stop .iconfont {
  color: #FFFFFF;
  font-size: 40rpx;
}

/* 心情选择器 */
.mood-selector {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.mood-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 16rpx;
  transition: transform 0.2s;
}

.mood-option:active {
  transform: scale(0.9);
}

.mood-option.selected {
  background-color: #F0F5FF;
}

.mood-emoji {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.mood-label {
  font-size: 24rpx;
  color: #8898AA;
}

/* 照片上传 */
.photo-upload {
  border: 2rpx dashed #E2E8F0;
  border-radius: 16rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.photo-upload:active {
  border-color: #5E72E4;
}

.photo-upload .iconfont {
  font-size: 60rpx;
  color: #CBD5E0;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #8898AA;
}

.photo-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

.photo-item {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
}

.photo-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.photo-delete {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.photo-delete .iconfont {
  color: #FFFFFF;
  font-size: 24rpx;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  background-color: #5E72E4;
  color: #FFFFFF;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  padding: 24rpx 0;
  margin-top: 20rpx;
}

/* 日历卡片 */
.calendar-card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.calendar-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #32325D;
}

.calendar-action {
  font-size: 28rpx;
  color: #5E72E4;
}

.calendar-days {
  display: flex;
  justify-content: space-between;
}

.day-column {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.day-label {
  font-size: 24rpx;
  color: #8898AA;
  margin-bottom: 16rpx;
}

.day-circle {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #32325D;
  position: relative;
}

.day-circle.today {
  background-color: #5E72E4;
  color: #FFFFFF;
  font-weight: bold;
}

.day-circle.completed::after {
  content: '';
  position: absolute;
  bottom: 6rpx;
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #5E72E4;
}

.day-circle.disabled {
  color: #CBD5E0;
} 
