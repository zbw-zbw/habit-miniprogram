/* 引入图标字体 */
@import "/styles/iconfont.wxss";

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #F8F9FE;
  padding: 30rpx;
}

/* 内容区域 */
.content {
  padding: 30rpx;
}

/* 章节标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #32325D;
  margin-bottom: 20rpx;
}

/* 习惯列表 */
.habits-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 40rpx;
}

/* 确保习惯卡片间距统一 */
.habits-list habit-card {
  margin-bottom: 16rpx;
  display: block;
}

/* 习惯卡片 */
.current-habit-card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
}

.habit-card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.habit-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.habit-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.habit-icon .iconfont {
  font-size: 48rpx;
}

.habit-meta {
  flex: 1;
}

.habit-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #32325D;
  margin-bottom: 6rpx;
}

.habit-desc {
  font-size: 24rpx;
  color: #8898AA;
}

.habit-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.streak-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #2DCE89;
}

.checkin-btn {
  padding: 16rpx 40rpx;
  border-radius: 16rpx;
  background-color: #5E72E4;
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 1;
  transition: all 0.2s;
}

.checkin-btn:active {
  transform: scale(0.95);
}

.checkin-btn.cancel {
  background-color: #8898AA;
}

.checkin-btn.completed {
  background-color: #F2F3F5;
  color: #8898AA;
}

/* 打卡表单 */
.checkin-form {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 习惯标题样式 */
.habit-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.habit-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.habit-icon .iconfont {
  font-size: 48rpx;
}

.habit-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #32325D;
}

.form-date {
  font-size: 28rpx;
  color: #8898AA;
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #E2E8F0;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 16rpx;
  font-weight: 500;
}

/* 时长选择器样式 */
.time-picker {
  width: 100%;
}

.time-display {
  font-size: 64rpx;
  font-weight: 300;
  text-align: center;
  color: #32325D;
  margin: 20rpx 0;
  font-family: monospace;
  font-variant-numeric: tabular-nums;
  padding: 20rpx;
  background-color: #F1F5F9;
  border-radius: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 内容输入框样式 */
.form-input {
  background-color: #F1F5F9;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #32325D;
  width: 100%;
  box-sizing: border-box;
}

.form-input.content {
  height: 240rpx;
  padding: 24rpx;
}

.form-textarea {
  background-color: #F1F5F9;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #32325D;
  width: 100%;
  height: 240rpx;
  box-sizing: border-box;
}

/* 心情选择器样式 */
.mood-selector {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
}

.mood-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.mood-emoji {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.mood-label {
  font-size: 24rpx;
  color: #606266;
}

.mood-option.selected {
  background-color: #E6F7FF;
  transform: scale(1.05);
}

.mood-option:active {
  transform: scale(0.95);
}

/* 照片上传样式 */
.photo-upload {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  background-color: #F1F5F9;
  border-radius: 16rpx;
  border: 2rpx dashed #D0D7DE;
  margin-bottom: 20rpx;
}

.photo-upload .iconfont {
  font-size: 48rpx;
  color: #8898AA;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #8898AA;
}

.photo-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.photo-item {
  width: calc(33.33% - 20rpx);
  height: 200rpx;
  margin: 10rpx;
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
}

.photo-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.photo-delete {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 48rpx;
  height: 48rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

/* 提交按钮样式 */
.submit-btn {
  margin-top: 60rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #4F7CFF, #5E72E4);
  color: white;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 16rpx rgba(94, 114, 228, 0.3);
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 8rpx rgba(94, 114, 228, 0.3);
}

/* 日历卡片 */
.calendar-card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.calendar-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #32325D;
}

.calendar-action {
  font-size: 28rpx;
  color: #5E72E4;
}

.calendar-days {
  display: flex;
  justify-content: space-between;
}

.day-column {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.day-label {
  font-size: 24rpx;
  color: #8898AA;
  margin-bottom: 16rpx;
}

.day-circle {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #32325D;
  position: relative;
}

.day-circle.today {
  background-color: #5E72E4;
  color: #FFFFFF;
  font-weight: bold;
}

.day-circle.completed::after {
  content: '';
  position: absolute;
  bottom: 6rpx;
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #5E72E4;
}

.day-circle.disabled {
  color: #CBD5E0;
}

/* 打卡成功弹窗样式 */
.success-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.success-popup-content {
  width: 80%;
  background-color: white;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.success-icon {
  width: 120rpx;
  height: 120rpx;
  background-color: #4CAF50;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  margin: 0 auto 30rpx;
}

.success-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #32325D;
  margin-bottom: 16rpx;
}

.success-subtitle {
  font-size: 28rpx;
  color: #8898AA;
  margin-bottom: 30rpx;
}

.success-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.stats-item {
  text-align: center;
}

.stats-value {
  font-size: 48rpx;
  font-weight: 600;
  color: #5E72E4;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #8898AA;
}

.success-actions {
  display: flex;
  justify-content: space-between;
}

.success-btn {
  width: 45%;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.success-btn.share {
  background-color: #5E72E4;
  color: white;
}

.success-btn.close {
  background-color: #F1F5F9;
  color: #606266;
} 
