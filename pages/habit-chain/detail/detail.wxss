.detail-page {
  padding: 16px;
  background-color: #F5F7FA;
  min-height: 100vh;
}

.chain-header {
  background-color: #FFFFFF;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 16px;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.05);
}

.chain-name {
  font-size: 24px;
  font-weight: 600;
  color: #303133;
  margin-bottom: 8px;
}

.chain-description {
  font-size: 14px;
  color: #606266;
  margin-bottom: 16px;
  line-height: 1.5;
}

.chain-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 16px;
  margin-bottom: 16px;
}

.chain-meta-item {
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #909399;
}

.chain-meta-item mp-icon {
  margin-right: 4px;
}

.section {
  background-color: #FFFFFF;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 18px;
  font-weight: 500;
  color: #303133;
  margin-bottom: 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title .action {
  font-size: 14px;
  color: #4F7CFF;
  font-weight: normal;
}

.visualizer-container {
  height: 300px;
  width: 100%;
  margin-bottom: 16px;
}

.habits-list {
  margin-top: 16px;
}

.habit-item {
  display: flex;
  align-items: center;
  padding: 12px;
  border-radius: 8px;
  background-color: #F5F7FA;
  margin-bottom: 12px;
}

.habit-icon {
  width: 40px;
  height: 40px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 20px;
  margin-right: 12px;
}

.habit-info {
  flex: 1;
}

.habit-name {
  font-size: 16px;
  font-weight: 500;
  color: #303133;
  margin-bottom: 4px;
}

.habit-status {
  font-size: 12px;
  color: #909399;
}

.habit-status.optional {
  color: #E6A23C;
}

.habit-order {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  background-color: #4F7CFF;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  margin-right: 8px;
}

.progress-section {
  margin-top: 20px;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.progress-title {
  font-size: 16px;
  font-weight: 500;
  color: #303133;
}

.progress-date {
  font-size: 14px;
  color: #909399;
}

.progress-bar {
  height: 10px;
  background-color: #EBEEF5;
  border-radius: 5px;
  overflow: hidden;
  margin-bottom: 8px;
}

.progress-fill {
  height: 100%;
  background-color: #4F7CFF;
  border-radius: 5px;
}

.progress-stats {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: #909399;
}

.checkin-button {
  background-color: #4F7CFF;
  color: #FFFFFF;
  border-radius: 8px;
  font-size: 16px;
  padding: 12px;
  margin-top: 20px;
  width: 100%;
  text-align: center;
}

.checkin-button.disabled {
  background-color: #C0C4CC;
}

.action-buttons {
  display: flex;
  gap: 12px;
  margin-top: 20px;
}

.action-button {
  flex: 1;
  padding: 12px;
  text-align: center;
  border-radius: 8px;
  font-size: 14px;
}

.edit-button {
  background-color: #4F7CFF;
  color: #FFFFFF;
}

.delete-button {
  background-color: #F56C6C;
  color: #FFFFFF;
}

.calendar-container {
  padding: 16px 0;
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.calendar-title {
  font-size: 16px;
  font-weight: 500;
  color: #303133;
}

.calendar-nav {
  display: flex;
  align-items: center;
}

.calendar-nav-button {
  padding: 4px 8px;
  font-size: 14px;
  color: #606266;
}

.calendar-weekdays {
  display: flex;
  justify-content: space-around;
  margin-bottom: 8px;
}

.weekday {
  width: 36px;
  text-align: center;
  font-size: 12px;
  color: #909399;
}

.calendar-days {
  display: flex;
  flex-wrap: wrap;
}

.day {
  width: 14.28%;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8px;
  position: relative;
}

.day-inner {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  font-size: 14px;
  color: #606266;
}

.day.other-month .day-inner {
  color: #C0C4CC;
}

.day.today .day-inner {
  border: 1px solid #4F7CFF;
  color: #4F7CFF;
}

.day.completed .day-inner {
  background-color: #4F7CFF;
  color: #FFFFFF;
}

.day.partial .day-inner {
  background-color: #ECF5FF;
  color: #4F7CFF;
}

.loading-container {
  display: flex;
  justify-content: center;
  padding: 40px 0;
}

.loading-text {
  color: #909399;
  font-size: 14px;
}

.icon-text {
  font-size: 16px;
  line-height: 1;
} 
