/* pages/habits/create/create.wxss */
/**
 * 创建习惯页面样式
 */
.container {
  padding: 0 32rpx 32rpx;
  box-sizing: border-box;
}

/* 表单样式 */
.form {
  padding-bottom: 120rpx;
}

.form-section {
  margin-bottom: 40rpx;
  background-color: #FFFFFF;
  border-radius: var(--radius-medium);
  padding: 24rpx;
  box-shadow: var(--shadow-light);
}

.form-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--title-color);
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px solid var(--divider-color);
}

.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1px solid var(--divider-color);
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 28rpx;
  color: var(--text-color);
  flex-shrink: 0;
  margin-right: 20rpx;
}

.required {
  color: var(--error-color);
  margin-left: 4rpx;
}

.form-input {
  flex: 1;
  height: 80rpx;
  background-color: var(--background-color);
  border-radius: var(--radius-small);
  padding: 0 20rpx;
  font-size: 28rpx;
  color: var(--text-color);
}

.form-textarea {
  flex: 1;
  width: 100%;
  height: 160rpx;
  background-color: var(--background-color);
  border-radius: var(--radius-small);
  padding: 20rpx;
  font-size: 28rpx;
  color: var(--text-color);
  box-sizing: border-box;
}

.form-picker {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  background-color: var(--background-color);
  border-radius: var(--radius-small);
  padding: 0 20rpx;
  font-size: 28rpx;
  color: var(--text-color);
}

/* 图标预览 */
.icon-preview {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
}

.icon-preview .iconfont {
  font-size: 36rpx;
}

/* 颜色预览 */
.color-preview {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

/* 周天选择器 */
.weekday-selector {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin-top: 16rpx;
  gap: 16rpx;
}

.weekday-item {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--background-color);
  color: var(--text-color);
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  flex-grow: 0;
  flex-shrink: 0;
}

.weekday-item.active {
  background-color: var(--primary-color);
  color: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(79, 124, 255, 0.5);
}

/* 目标输入 */
.goal-input {
  display: flex;
  align-items: center;
  flex: 1;
}

.goal-value {
  width: 100rpx;
  margin-right: 16rpx;
  text-align: center;
}

.goal-unit {
  width: 120rpx;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background-color: #FFFFFF;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.footer .btn {
  flex: 1;
  margin: 0 16rpx;
}

.footer .btn:first-child {
  margin-left: 0;
}

.footer .btn:last-child {
  margin-right: 0;
}

/* 模态框 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.modal.show {
  visibility: visible;
  opacity: 1;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFFFFF;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1px solid var(--divider-color);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--title-color);
}

.modal-close {
  font-size: 40rpx;
  color: var(--text-color-secondary);
  line-height: 1;
}

.modal-body {
  padding: 24rpx 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

/* 图标选择器 */
.icon-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -8rpx;
}

.icon-item {
  width: 20%;
  padding: 8rpx;
  box-sizing: border-box;
}

.icon-box {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.icon-box .iconfont {
  font-size: 44rpx;
}

.icon-item.active .icon-box {
  box-shadow: 0 0 0 4rpx var(--primary-color);
}

/* 颜色选择器 */
.color-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -8rpx;
}

.color-item {
  width: 20%;
  padding: 8rpx;
  box-sizing: border-box;
}

.color-box {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin: 0 auto;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.color-item.active .color-box {
  box-shadow: 0 0 0 4rpx var(--primary-color);
}

/* 频率选择器 */
.frequency-list {
  display: flex;
  flex-direction: column;
}

.frequency-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 16rpx;
  font-size: 32rpx;
  color: var(--text-color);
  border-bottom: 1px solid var(--divider-color);
}

.frequency-item:last-child {
  border-bottom: none;
}

.frequency-item.active {
  color: var(--primary-color);
}

.frequency-item .icon-check {
  color: var(--primary-color);
  font-size: 36rpx;
}

/* 分类选择器 */
.category-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -12rpx;
}

.category-item {
  width: 25%;
  padding: 12rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.category-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: var(--radius-medium);
  background-color: var(--divider-color);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.category-icon .iconfont {
  font-size: 48rpx;
  color: var(--text-color);
}

.category-name {
  font-size: 24rpx;
  color: var(--text-color);
  text-align: center;
}

.category-item.active .category-icon {
  background-color: var(--primary-color);
}

.category-item.active .category-icon .iconfont {
  color: #FFFFFF;
}

.category-item.active .category-name {
  color: var(--primary-color);
  font-weight: 600;
}

/* 分类内容布局 */
.category-item-content {
  display: flex;
  align-items: center;
}

.category-item-content .iconfont {
  margin-right: 16rpx;
  font-size: 36rpx;
  color: var(--primary-color);
}

.category-item-content .category-name {
  font-size: 28rpx;
}
