/**
 * 习惯列表页面样式
 */
.container {
  padding: 0 32rpx 32rpx;
}

/* 标签栏 */
.tabs {
  position: sticky;
  top: 0;
  z-index: 10;
  background-color: #FFFFFF;
  padding: 16rpx 0;
  border-bottom: 1px solid var(--divider-color);
  margin-bottom: 16rpx;
}

.tabs-scroll {
  white-space: nowrap;
  display: flex;
  height: 80rpx;
  width: 100%;
  justify-content: center;
}

.tab-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  color: var(--text-color);
  position: relative;
  transition: all 0.3s ease;
  flex: 1;
  text-align: center;
}

.tab-item.active {
  color: var(--primary-color);
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background-color: var(--primary-color);
  border-radius: 2rpx;
}

/* 工具栏 */
.toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.toolbar-left, .toolbar-right {
  display: flex;
  align-items: center;
}

.toolbar-item {
  display: flex;
  align-items: center;
  margin-right: 32rpx;
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

.toolbar-item .iconfont {
  margin-right: 8rpx;
  font-size: 32rpx;
}

/* 日历卡片 */
.calendar-card {
  background-color: #FFFFFF;
  border-radius: var(--radius-medium);
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-light);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--title-color);
}

.card-actions {
  display: flex;
}

.action-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 8rpx;
  border-radius: 24rpx;
  background-color: var(--background-color);
}

.calendar-weekdays {
  display: flex;
  border-bottom: 1px solid var(--divider-color);
  padding-bottom: 12rpx;
  margin-bottom: 12rpx;
}

.weekday {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.calendar-day {
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  border-radius: 8rpx;
  position: relative;
}

.calendar-day.other-month {
  color: var(--text-color-light);
}

.calendar-day.today {
  color: var(--primary-color);
  font-weight: 600;
}

.calendar-day.today::after {
  content: '';
  position: absolute;
  bottom: 6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: var(--primary-color);
}

.calendar-day.selected {
  background-color: var(--primary-color);
  color: #FFFFFF;
}

.calendar-footer {
  padding-top: 12rpx;
  border-top: 1px solid var(--divider-color);
}

.date-display {
  text-align: center;
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 600;
}

/* 习惯列表 */
.habits-list {
  margin-top: 16rpx;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-color-secondary);
  margin-bottom: 32rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid var(--divider-color);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-color-secondary);
}

/* 浮动按钮 */
.fab {
  position: fixed;
  right: 32rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: var(--primary-color);
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-medium);
  z-index: 100;
}

.fab .iconfont {
  font-size: 48rpx;
}

/* 模态框 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.modal.show {
  visibility: visible;
  opacity: 1;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFFFFF;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1px solid var(--divider-color);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--title-color);
}

.modal-close {
  font-size: 40rpx;
  color: var(--text-color-secondary);
  line-height: 1;
}

.modal-body {
  padding: 24rpx 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

/* 分类列表 */
.category-list {
  display: flex;
  flex-wrap: wrap;
}

.category-item {
  width: 25%;
  padding: 16rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 16rpx;
}

.category-item.active {
  color: var(--primary-color);
  font-weight: 600;
}

/* 排序列表 */
.sort-list {
  
}

.sort-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: var(--text-color);
  border-bottom: 1px solid var(--divider-color);
}

.sort-item:last-child {
  border-bottom: none;
}

.sort-item.active {
  color: var(--primary-color);
}

.sort-item .iconfont {
  font-size: 32rpx;
  color: var(--primary-color);
} 
