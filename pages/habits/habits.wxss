/**
 * 习惯列表页面样式
 */
.container {
  padding: 0 32rpx 32rpx;
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 标签栏 */
.tabs {
  position: sticky;
  top: 0;
  z-index: 10;
  background-color: var(--card-background);
  padding: 20rpx 0;
  border-bottom: 1px solid var(--divider-color);
  margin-bottom: 24rpx;
  width: 100vw;
  left: 0;
  margin-left: -32rpx; /* 抵消container的padding */
  box-sizing: border-box;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.03);
}

.tabs-scroll {
  white-space: nowrap;
  display: flex;
  height: 80rpx;
  width: 100%;
  justify-content: center;
  padding: 0 32rpx; /* 内容与container保持一致的padding */
  box-sizing: border-box;
}

.tab-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  color: var(--text-color);
  position: relative;
  transition: all 0.3s ease;
  flex: 1;
  text-align: center;
}

.tab-item.active {
  color: var(--primary-color);
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -4rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  background: var(--primary-gradient);
  border-radius: 3rpx;
}

/* 过滤栏 */
.filter-bar {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 16rpx 0;
  margin-bottom: 24rpx;
  background-color: transparent;
}

.filter-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: var(--text-color);
  background-color: var(--card-background);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  box-shadow: var(--shadow-light);
}

.filter-item text {
  margin-right: 16rpx;
}

.filter-item switch {
  transform: scale(0.8);
  color: var(--primary-color);
} 

/* 习惯列表 */
.habits-list {
  margin-top: 16rpx;
}

/* 习惯卡片 hover 效果 */
.habits-list habit-card {
  transition: transform 0.2s ease;
  margin-bottom: 24rpx;
  display: block;
}

.habits-list habit-card:active {
  transform: scale(0.98);
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  background-color: var(--card-background);
  border-radius: var(--radius-large);
  margin-top: 32rpx;
  box-shadow: var(--shadow-light);
}

.empty-icon {
  font-size: 88rpx;
  color: var(--text-color-secondary);
  margin-bottom: 24rpx;
  opacity: 0.8;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-color-secondary);
  margin-bottom: 32rpx;
  text-align: center;
}

.empty-action {
  margin-top: 24rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid var(--divider-color);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-color-secondary);
}

/* 浮动按钮 */
.fab {
  position: fixed;
  right: 32rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: var(--primary-color);
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-medium);
  z-index: 100;
}

.fab .iconfont {
  font-size: 48rpx;
}

/* 模态框 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.modal.show {
  visibility: visible;
  opacity: 1;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4px);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: var(--card-background);
  border-top-left-radius: var(--radius-xlarge);
  border-top-right-radius: var(--radius-xlarge);
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
}

.modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 32rpx;
  border-bottom: 1px solid var(--divider-color);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--title-color);
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: var(--divider-color);
  color: var(--text-color);
  font-size: 36rpx;
  line-height: 1;
}

.modal-body {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

/* 分类列表 */
.category-list {
  display: flex;
  flex-wrap: wrap;
}

.category-item {
  width: 25%;
  padding: 20rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 20rpx;
  transition: all 0.2s ease;
}

.category-item.active {
  color: var(--primary-color);
  font-weight: 600;
  transform: scale(1.05);
}

/* 排序列表 */
.sort-list {
  
}

.sort-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 16rpx;
  font-size: 28rpx;
  color: var(--text-color);
  border-bottom: 1px solid var(--divider-color);
  transition: background-color 0.2s ease;
}

.sort-item:last-child {
  border-bottom: none;
}

.sort-item.active {
  color: var(--primary-color);
  font-weight: 500;
  background-color: rgba(79, 124, 255, 0.05);
}

.sort-item .iconfont {
  font-size: 32rpx;
  color: var(--primary-color);
} 
