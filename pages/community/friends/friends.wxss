/* 好友列表页面样式 */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-bottom: 100rpx;
  position: relative;
  width: 100%;
  overflow-x: hidden;
}

/* 搜索框容器 */
.search-container {
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  position: sticky;
  top: 0;
  z-index: 99;
}

/* 加载中 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}

/* 空状态容器 */
.empty-container {
  padding: 100rpx 0;
}

.find-btn {
  margin-top: 30rpx;
}

/* 好友列表 */
.friends-list {
  padding: 0 30rpx;
  box-sizing: border-box;
  width: 100%;
}

/* 好友项 */
.friend-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #ebedf0;
  width: 100%;
  box-sizing: border-box;
  flex-wrap: nowrap;
  position: relative;
}

/* 好友头像 */
.friend-avatar {
  position: relative;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.friend-avatar image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f2f2f2;
}

/* 在线状态指示器 */
.online-status {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #cccccc;
  border: 2rpx solid #ffffff;
}

.online-status.online {
  background-color: #67c23a;
}

/* 好友信息 */
.friend-info {
  flex: 1;
  overflow: hidden;
  margin-right: 20rpx;
  max-width: calc(100% - 230rpx);
}

.friend-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.friend-bio {
  font-size: 24rpx;
  color: #909399;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 4rpx;
}

.friend-follow-time {
  font-size: 22rpx;
  color: #c0c4cc;
}

/* 好友操作按钮 */
.friend-actions {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  margin-left: auto;
  gap: 12rpx;
}

.action-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 56rpx;
  font-size: 24rpx;
  border-radius: 28rpx;
  background-color: #f2f2f2;
  color: #606266;
  line-height: 1;
  box-sizing: border-box;
  white-space: nowrap;
  padding: 0 20rpx;
  margin: 0;
  min-width: 56rpx !important;
  width: auto;
}

.message-btn {
  width: 56rpx !important;
  padding: 0;
  flex-shrink: 0;
}

.unfollow-btn {
  background-color: #f2f2f2;
  color: #909399;
  width: 80rpx;
  padding: 0;
  font-size: 22rpx;
  min-width: 80rpx;
}

.follow-btn {
  background-color: #4f7cff;
  color: #ffffff;
  min-width: 80rpx;
}

.following-btn {
  background-color: #f2f2f2;
  color: #606266;
  min-width: 100rpx;
}

.add-btn {
  background-color: #4f7cff;
  color: #ffffff;
  width: 64rpx;
  min-width: 64rpx;
  padding: 0;
}

.added-btn {
  background-color: #f2f2f2;
  color: #606266;
  width: 64rpx;
  min-width: 64rpx;
  padding: 0;
}

/* 加载更多 */
.loading-more {
  text-align: center;
  padding: 30rpx 0;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 24rpx;
  color: #909399;
}

/* 浮动按钮 */
.float-btn {
  display: none;
}

.float-btn .van-icon {
  font-size: 48rpx;
}

