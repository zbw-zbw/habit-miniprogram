/* pages/community/friends/add-friend.wxss */
@import "/styles/iconfont.wxss";

.container {
  background-color: #F5F7FA;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 导航栏 */
.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #FFFFFF;
  position: relative;
}

.navbar-left {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.navbar-left .iconfont {
  font-size: 40rpx;
  color: #303133;
}

.navbar-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 32rpx;
  font-weight: 500;
  color: #303133;
}

.navbar-right {
  width: 60rpx;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #FFFFFF;
}

.search-input-wrapper {
  flex: 1;
  height: 70rpx;
  background-color: #F5F7FA;
  border-radius: 35rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.search-input-wrapper .iconfont {
  font-size: 32rpx;
  color: #909399;
  margin-right: 10rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #303133;
}

.search-input-wrapper .icon-close {
  font-size: 28rpx;
  color: #C0C4CC;
}

.search-btn {
  width: 100rpx;
  height: 70rpx;
  background-color: #4F7CFF;
  border-radius: 35rpx;
  color: #FFFFFF;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 搜索结果 */
.search-results {
  margin-top: 20rpx;
  background-color: #FFFFFF;
  padding: 0 0 20rpx 0;
}

/* 推荐好友 */
.recommend-section {
  margin-top: 20rpx;
  background-color: #FFFFFF;
  padding: 0 0 20rpx 0;
}

/* 扫码添加 */
.scan-section {
  margin-top: 20rpx;
  padding: 0 30rpx;
}

.scan-btn {
  width: 100%;
  height: 90rpx;
  background-color: #FFFFFF;
  border-radius: 45rpx;
  color: #4F7CFF;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #4F7CFF;
}

.scan-btn .iconfont {
  font-size: 32rpx;
  margin-right: 10rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #DCDFE6;
  border-top-color: #4F7CFF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #909399;
}

/* 列表标题 */
.section-header {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #EBEEF5;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #303133;
}

/* 用户列表 */
.user-list {
  padding: 0 30rpx;
}

.user-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #EBEEF5;
}

.user-item:last-child {
  border-bottom: none;
}

.user-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-detail {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 6rpx;
}

.user-bio {
  font-size: 24rpx;
  color: #909399;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 400rpx;
}

.user-action {
  margin-left: 20rpx;
}

.add-btn {
  min-width: 120rpx;
  height: 60rpx;
  background-color: #4F7CFF;
  border-radius: 30rpx;
  color: #FFFFFF;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 20rpx;
  border: none;
}

.add-btn.added {
  background-color: #DCDFE6;
  color: #909399;
}

/* 无结果 */
.no-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.no-result-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.no-result-text {
  font-size: 28rpx;
  color: #909399;
} 
