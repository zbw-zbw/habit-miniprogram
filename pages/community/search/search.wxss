/* 社区搜索页面样式 */
.container {
  padding: 0;
  background-color: #f7f7f7;
}

/* 搜索头部 */
.search-header {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #ffffff;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05);
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f7f7f7;
  border-radius: 8rpx;
  padding: 0 16rpx;
  height: 72rpx;
  position: relative;
}

.search-box .icon-search {
  font-size: 32rpx;
  color: #b2b2b2;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  height: 72rpx;
  font-size: 28rpx;
  color: #333333;
}

.placeholder {
  color: #b2b2b2;
}

.clear-btn {
  font-size: 32rpx;
  color: #b2b2b2;
  padding: 12rpx;
}

.search-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 12rpx;
  background-color: #4f7cff;
  border-radius: 8rpx;
}

.search-btn .iconfont {
  font-size: 32rpx;
  color: #ffffff;
}

.cancel-btn {
  margin-left: 24rpx;
  font-size: 28rpx;
  color: #576b95;
  white-space: nowrap;
}

/* 搜索历史 */
.search-history {
  margin: 32rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.history-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.clear-history {
  font-size: 26rpx;
  color: #b2b2b2;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
}

.history-tag {
  background-color: #ffffff;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  color: #333333;
}

/* 热门搜索 */
.hot-search {
  margin: 32rpx;
}

.hot-header {
  margin-bottom: 24rpx;
}

.hot-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.hot-tags {
  display: flex;
  flex-direction: column;
}

.hot-tag {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #f2f2f2;
}

.hot-rank {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #576b95;
  color: white;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  font-weight: 600;
}

.hot-text {
  font-size: 28rpx;
  color: #333333;
}

/* 搜索结果 */
.search-results {
  padding-bottom: 32rpx;
}

/* 标签页 */
.result-tabs {
  display: flex;
  background-color: #ffffff;
  padding: 0 32rpx;
  margin-bottom: 16rpx;
  position: sticky;
  top: 104rpx;
  z-index: 9;
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #333333;
  position: relative;
}

.tab-item.active {
  color: #576b95;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  background: #576b95;
  border-radius: 3rpx;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 3rpx solid #eeeeee;
  border-top-color: #576b95;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #b2b2b2;
}

/* 空结果 */
.empty-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-icon {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 24rpx;
  opacity: 0.7;
}

.empty-text {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.empty-tips {
  font-size: 26rpx;
  color: #b2b2b2;
}

/* 结果列表通用样式 */
.result-list {
  padding: 0 24rpx;
  margin-bottom: 24rpx;
  background-color: #ffffff;
}

/* 全部标签下的分类标题 */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin: 24rpx 0 16rpx;
  padding-left: 16rpx;
  border-left: 8rpx solid #576b95;
}

/* 查看更多按钮 */
.view-more {
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #576b95;
}

/* 用户列表 - 优化样式 */
.user-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1px solid #f2f2f2;
}

.user-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background-color: #f5f7fa;
}

.user-info {
  flex: 1;
  overflow: hidden;
  margin-right: 16rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 8rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.user-bio {
  font-size: 26rpx;
  color: #909399;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

/* 增加按钮样式的权重 */
.user-item .follow-btn {
  width: 120rpx !important;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 22rpx;
  background: #4f7cff;
  color: white;
  font-size: 22rpx;
  padding: 0 16rpx;
  margin: 0;
}

.user-item .follow-btn.following {
  background: #f5f7fa;
  color: #606266;
  border: 1px solid #dcdfe6;
}

/* 小组列表 - 优化样式 */
.group-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 0;
  border-bottom: 1px solid #f2f2f2;
  display: flex;
}

.group-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
  background-color: #f5f7fa;
}

.group-info {
  flex: 1;
  overflow: hidden;
  margin-right: 16rpx;
}

.group-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 8rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.group-desc {
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
}

.group-meta {
  font-size: 24rpx;
  color: #909399;
}

.group-members {
  margin-right: 16rpx;
}

/* 增加按钮样式的权重 */
.group-item .join-btn {
  width: 120rpx !important;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 22rpx;
  background: #4f7cff;
  color: white;
  font-size: 22rpx;
  padding: 0 16rpx;
  margin: 0;
  align-self: center;
}

.group-item .join-btn.joined {
  background: #f5f7fa;
  color: #606266;
  border: 1px solid #dcdfe6;
}

/* 挑战列表 - 优化样式 */
.challenge-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 0;
  border-bottom: 1px solid #f2f2f2;
  display: flex;
}

.challenge-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
  object-fit: cover;
  background-color: #f5f7fa;
}

.challenge-info {
  flex: 1;
  overflow: hidden;
  margin-right: 16rpx;
}

.challenge-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 8rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.challenge-desc {
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
}

.challenge-meta {
  font-size: 24rpx;
  color: #909399;
}

/* 增加按钮样式的权重 */
.challenge-item .join-btn {
  width: 120rpx !important;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 22rpx;
  background: #4f7cff;
  color: white;
  font-size: 22rpx;
  padding: 0 16rpx;
  margin: 0;
  align-self: center;
}

.challenge-item .join-btn.joined {
  background: #f5f7fa;
  color: #606266;
  border: 1px solid #dcdfe6;
}

/* 动态列表 - 微信朋友圈风格 */
.post-item {
  padding: 30rpx 24rpx;
  border-bottom: 1px solid #f2f2f2;
}

.post-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.post-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.post-user-info {
  flex: 1;
}

.post-username {
  font-size: 30rpx;
  font-weight: 500;
  color: #576b95;
  margin-bottom: 6rpx;
}

.post-time {
  font-size: 24rpx;
  color: #b2b2b2;
}

.post-content {
  padding-left: 100rpx;
  margin-bottom: 16rpx;
}

.post-text {
  font-size: 30rpx;
  color: #333333;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: justify;
}

.post-images {
  position: relative;
  display: flex;
}

.post-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 4rpx;
  object-fit: cover;
}

.post-image.single {
  width: 400rpx;
  height: 400rpx;
}

.image-count {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #ffffff;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.post-stats {
  display: flex;
  padding-left: 100rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  margin-right: 48rpx;
  font-size: 26rpx;
  color: #b2b2b2;
}

.stat-item .iconfont {
  font-size: 36rpx;
  margin-right: 8rpx;
  color: #b2b2b2;
}

/* 加载更多和没有更多 */
.load-more,
.no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #b2b2b2;
}

/* 分类标题样式 */
.category-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  padding: 24rpx 24rpx 16rpx;
  border-bottom: 1px solid #f2f2f2;
}

/* 状态标签样式 */
.status-label {
  padding: 0 16rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 22rpx;
  font-size: 22rpx;
  text-align: center;
  align-self: center;
  width: 120rpx;
}

.status-label.joined {
  background: #f5f7fa;
  color: #67C23A;
  border: 1px solid #e6f2e6;
}

.status-label.creator {
  background: #f0f5ff;
  color: #4F7CFF;
  border: 1px solid #d0e1ff;
}
