/* 小组详情页面样式 */
.container {
  background-color: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

/* 错误提示 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.error-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
}

.error-text {
  font-size: 28rpx;
  color: #909399;
  margin-bottom: 32rpx;
}

.retry-button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 200rpx;
  height: 80rpx;
  background-color: #4f7cff;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 40rpx;
}

/* 小组头部 */
.group-header {
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.group-cover {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
}

.group-info {
  padding: 32rpx;
  display: flex;
  position: relative;
}

.group-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
}

.group-meta {
  flex: 1;
  overflow: hidden;
}

.group-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 16rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.group-stats {
  display: flex;
  font-size: 24rpx;
  color: #909399;
  margin-bottom: 16rpx;
}

.stat-item {
  margin-right: 16rpx;
}

.group-tags {
  display: flex;
  flex-wrap: wrap;
}

.group-tag {
  margin-right: 16rpx !important;
  margin-bottom: 8rpx !important;
}

.join-button {
  position: absolute;
  right: 32rpx;
  bottom: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 160rpx;
  height: 64rpx;
  background-color: #4f7cff;
  color: #ffffff;
  font-size: 26rpx;
  border-radius: 32rpx;
  padding: 0;
}

.join-button.joined {
  background-color: #f5f7fa;
  color: #606266;
  border: 1px solid #dcdfe6;
}

.join-button.creator {
  background-color: #f56c6c;
  color: #ffffff;
}

/* 小组描述 */
.group-description {
  background-color: #ffffff;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.description-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 16rpx;
  display: block;
}

.description-content {
  font-size: 28rpx;
  color: #606266;
  line-height: 1.6;
}

/* 小组管理员 */
.group-admin {
  background-color: #ffffff;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.admin-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 16rpx;
  display: block;
}

.admin-info {
  display: flex;
  align-items: center;
}

.admin-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 16rpx;
}

.admin-name {
  flex: 1;
  font-size: 28rpx;
  color: #303133;
}

.arrow-icon {
  color: #c0c4cc;
}

/* 标签页内容 */
.tab-content {
  padding: 32rpx;
}

/* 空内容提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #909399;
  margin-bottom: 32rpx;
}

.create-button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 240rpx;
  height: 80rpx;
  background-color: #4f7cff;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 40rpx;
}

/* 动态列表 */
.post-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 16rpx;
}

.post-user-info {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 4rpx;
}

.post-time {
  font-size: 24rpx;
  color: #909399;
}

.post-content {
  margin-bottom: 16rpx;
}

.post-text {
  font-size: 28rpx;
  color: #303133;
  line-height: 1.6;
  margin-bottom: 16rpx;
  word-break: break-all;
}

.post-images {
  position: relative;
}

.post-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

.post-image.single {
  width: 400rpx;
  height: 400rpx;
}

.image-count {
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #ffffff;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
}

.post-actions {
  display: flex;
}

.action-item {
  display: flex;
  align-items: center;
  margin-right: 32rpx;
  font-size: 24rpx;
  color: #909399;
}

.action-item .van-icon {
  margin-right: 8rpx;
}

.action-item .liked {
  color: #f56c6c;
}

/* 成员列表 */
.member-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1px solid #ebeef5;
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 16rpx;
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 28rpx;
  color: #303133;
  margin-bottom: 4rpx;
}

.member-role {
  font-size: 24rpx;
  color: #4f7cff;
}

/* 加载更多 */
.loading-more {
  text-align: center;
  padding: 32rpx 0;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 32rpx 0;
  font-size: 24rpx;
  color: #909399;
}

/* 悬浮按钮 */
.float-button {
  position: fixed;
  right: 32rpx;
  bottom: 32rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #4f7cff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(79, 124, 255, 0.4);
}

.float-button .van-icon {
  font-size: 48rpx;
  color: #ffffff;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  margin-top: 20rpx;
  gap: 20rpx;
  width: 100%;
  justify-content: space-between;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 70rpx;
  border-radius: 35rpx;
  font-size: 28rpx;
  margin: 0;
  padding: 0;
}

.action-btn.join {
  background-color: #4f7cff;
  color: #ffffff;
}

.action-btn.quit {
  background-color: #f5f7fa;
  color: #606266;
  border: 1px solid #dcdfe6;
}

.action-btn.creator {
  background-color: #f56c6c;
  color: #ffffff;
}

.action-btn.share {
  background-color: #f5f7fa;
  color: #606266;
  border: 1px solid #dcdfe6;
}

.action-btn .iconfont {
  margin-right: 6rpx;
  font-size: 28rpx;
}
