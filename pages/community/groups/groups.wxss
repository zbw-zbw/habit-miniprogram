/* pages/community/groups/groups.wxss */
page {
  background-color: #F5F7FA;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 16px;
  background-color: #FFFFFF;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-bar.active {
  padding-right: 0;
}

.search-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  border-radius: 16px;
  background-color: #F5F7FA;
}

.search-input-container {
  display: flex;
  align-items: center;
  flex: 1;
  height: 36px;
  background-color: #F5F7FA;
  border-radius: 18px;
  padding: 0 12px;
  margin-right: 12px;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 14px;
}

.create-btn {
  display: flex;
  align-items: center;
  padding: 6px 12px;
  background-color: #4F7CFF;
  border-radius: 16px;
  color: #FFFFFF;
  font-size: 14px;
}

.create-btn .iconfont {
  margin-right: 4px;
  font-size: 16px;
}

/* 标签栏 */
.tabs {
  display: flex;
  background-color: #FFFFFF;
  border-bottom: 1px solid #EBEEF5;
  margin-bottom: 12px;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 44px;
  font-size: 14px;
  color: #606266;
  position: relative;
}

.tab-item.active {
  color: #4F7CFF;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 20px;
  height: 3px;
  background-color: #4F7CFF;
  border-radius: 1.5px;
}

/* 小组列表 */
.groups-list {
  display: flex;
  flex-direction: column;
  padding: 0 12px;
  gap: 12px;
  padding-bottom: 24px;
}

.group-item {
  background-color: #FFFFFF;
  border-radius: 8px;
  overflow: hidden;
}

.group-cover {
  width: 100%;
  height: 120px;
  object-fit: cover;
}

.group-info {
  padding: 16px;
}

.group-header {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}

.group-avatar {
  width: 48px;
  height: 48px;
  border-radius: 8px;
  margin-right: 12px;
}

.group-meta {
  flex: 1;
}

.group-name {
  font-size: 16px;
  font-weight: 500;
  color: #303133;
  margin-bottom: 4px;
}

.group-members {
  font-size: 12px;
  color: #909399;
}

.join-btn {
  padding: 6px 16px;
  background-color: #4F7CFF;
  color: #FFFFFF;
  border-radius: 16px;
  font-size: 14px;
  margin: 0;
  line-height: 1.5;
}

.join-btn.quit {
  background-color: #F5F7FA;
  color: #606266;
  border: 1px solid #DCDFE6;
}

.group-description {
  font-size: 14px;
  color: #606266;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32px 0;
}

.loading-spinner {
  width: 32px;
  height: 32px;
  border: 3px solid #E4E7ED;
  border-top-color: #4F7CFF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.loading-spinner.small {
  width: 20px;
  height: 20px;
  border-width: 2px;
}

.loading-text {
  margin-top: 8px;
  font-size: 14px;
  color: #909399;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64px 0;
}

.empty-state .iconfont {
  font-size: 48px;
  color: #DCDFE6;
  margin-bottom: 16px;
}

.empty-text {
  font-size: 16px;
  color: #909399;
  margin-bottom: 24px;
}

.empty-btn {
  padding: 8px 24px;
  background-color: #4F7CFF;
  color: #FFFFFF;
  border-radius: 20px;
  font-size: 14px;
}

/* 加载更多和没有更多 */
.loading-more, .no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16px;
}

.loading-more {
  gap: 8px;
}

.no-more {
  color: #909399;
  font-size: 14px;
} 
