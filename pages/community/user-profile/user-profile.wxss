/* 用户资料页面样式 */
.container {
  min-height: 100vh;
  background-color: var(--background-color);
  padding-bottom: 30rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}

/* 错误提示 */
.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 60rpx;
}

.error-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.error-text {
  font-size: 28rpx;
  color: var(--text-color-secondary);
  margin-bottom: 30rpx;
}

.retry-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 70rpx;
  font-size: 28rpx;
  color: #FFFFFF;
  background: var(--primary-color);
  border-radius: 35rpx;
  text-align: center;
}

/* 用户头部 */
.user-header {
  position: relative;
  width: 100%;
  background-color: #FFFFFF;
  margin-bottom: 20rpx;
}

.user-cover {
  width: 100%;
  height: 350rpx;
  object-fit: cover;
}

.user-info {
  position: relative;
  padding: 40rpx 30rpx 30rpx;
  display: flex;
  align-items: flex-start;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 6rpx solid #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-top: -80rpx;
  flex-shrink: 0;
}

.user-meta {
  flex: 1;
  margin-top: 20rpx;
  padding-right: 140rpx; /* 为按钮预留空间 */
}

.user-name {
  font-size: 38rpx;
  font-weight: bold;
  color: var(--title-color);
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.user-bio {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 24rpx;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.user-stats {
  display: flex;
  align-items: center;
  margin-top: 24rpx;
  justify-content: space-between;
  max-width: 360rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
}

.stat-item:last-child {
  margin-right: 0;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--title-color);
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-color-secondary);
  margin-top: 6rpx;
}

.follow-button {
  position: absolute;
  top: 40rpx;
  right: 30rpx;
  padding: 10rpx 30rpx;
  background-color: #4F7CFF;
  color: #FFFFFF;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: none;
  font-weight: normal;
  line-height: 1.8;
  box-shadow: 0 4rpx 12rpx rgba(79, 124, 255, 0.3);
  width: auto;
  min-width: 120rpx;
  text-align: center;
}

.follow-button.following {
  background-color: #F5F7FA;
  color: #606266;
  border: 1px solid #DCDFE6;
  box-shadow: none;
}

.edit-button {
  position: absolute;
  top: 40rpx;
  right: 30rpx;
  padding: 10rpx 30rpx;
  background-color: #F5F7FA;
  color: #606266;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: 1px solid #DCDFE6;
  font-weight: normal;
  line-height: 1.8;
  width: auto;
  min-width: 120rpx;
  text-align: center;
}

/* 标签页内容 */
.tab-content {
  min-height: 300rpx;
  background-color: #FFFFFF;
  padding: 20rpx 0;
}

/* 空内容提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-color-secondary);
}

/* 动态列表 */
.post-list {
  padding: 0 30rpx;
}

.post-item {
  padding: 30rpx 0;
  border-bottom: 1px solid var(--divider-color);
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.post-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  padding: 0 20rpx;
}

.post-time {
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

.post-content {
  margin-bottom: 16rpx;
  padding: 0 20rpx;
}

.post-text {
  font-size: 28rpx;
  color: var(--text-color);
  line-height: 1.6;
  margin-bottom: 16rpx;
}

/* 图片容器 */
.post-images-container {
  margin: 16rpx 0;
}

.post-images {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  position: relative;
}

.post-images.single-image .post-image {
  width: 100%;
  max-height: 400rpx;
  border-radius: 12rpx;
}

.post-images.double-image .post-image {
  width: calc(50% - 4rpx);
  height: 300rpx;
  border-radius: 12rpx;
}

.post-images.multi-image .post-image {
  width: calc(33.33% - 6rpx);
  height: 220rpx;
  border-radius: 12rpx;
}

.post-image {
  object-fit: cover;
}

.image-count {
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #FFFFFF;
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
}

/* 标签样式 */
.post-tags {
  display: flex;
  flex-wrap: wrap;
  margin-top: 12rpx;
  gap: 12rpx;
}

.post-tag {
  background-color: rgba(79, 124, 255, 0.1);
  border-radius: 24rpx;
  padding: 6rpx 16rpx;
}

.tag-text {
  font-size: 24rpx;
  color: #4F7CFF;
}

.post-actions {
  display: flex;
  border-top: 1px solid var(--divider-color);
  padding: 16rpx 20rpx 0;
  margin-top: 16rpx;
}

.action-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  font-size: 24rpx;
  color: var(--text-color-secondary);
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
}

.action-item:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.action-item .van-icon {
  margin-right: 8rpx;
  font-size: 32rpx;
}

.action-item .liked {
  color: #FF5252;
}

/* 习惯列表 */
.habit-list {
  padding: 0 30rpx;
}

.habit-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid var(--divider-color);
}

.habit-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.habit-icon image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.habit-info {
  flex: 1;
}

.habit-name {
  font-size: 30rpx;
  color: var(--title-color);
  margin-bottom: 8rpx;
}

.habit-stats {
  display: flex;
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

.habit-streak {
  margin-right: 20rpx;
}

.arrow-icon {
  color: var(--text-color-secondary);
}

/* 成就列表 */
.achievement-list {
  padding: 0 30rpx;
}

.achievement-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid var(--divider-color);
}

.achievement-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.achievement-info {
  flex: 1;
}

.achievement-name {
  font-size: 30rpx;
  color: var(--title-color);
  margin-bottom: 8rpx;
}

.achievement-desc {
  font-size: 26rpx;
  color: var(--text-color);
  margin-bottom: 8rpx;
}

.achievement-date {
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

/* 加载更多 */
.loading-more {
  text-align: center;
  padding: 30rpx 0;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 24rpx;
  color: var(--text-color-secondary);
} 
