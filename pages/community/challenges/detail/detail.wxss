.container {
  padding-bottom: 30rpx;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}

/* 挑战封面 */
.challenge-cover {
  position: relative;
  width: 100%;
  height: 400rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.back-btn {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 70rpx;
  height: 70rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.challenge-status {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #fff;
}

.status-upcoming {
  background-color: #E6A23C;
}

.status-active {
  background-color: #67C23A;
}

.status-completed {
  background-color: #909399;
}

.status-cancelled {
  background-color: #F56C6C;
}

/* 挑战信息 */
.challenge-info {
  padding: 30rpx;
}

.challenge-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.challenge-meta {
  display: flex;
  margin-bottom: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  color: #606266;
  font-size: 26rpx;
}

.meta-item van-icon {
  margin-right: 8rpx;
}

/* 标签 */
.challenge-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
}

.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  background-color: rgba(79, 124, 255, 0.1);
  color: #4F7CFF;
  border: 1px solid #4F7CFF;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

/* 创建者信息 */
.creator-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #F5F7FA;
  border-radius: 12rpx;
}

.creator-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.creator-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
}

.creator-label {
  font-size: 24rpx;
  color: #909399;
  background-color: #EBEEF5;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

/* 参与按钮 */
.action-btn {
  margin-bottom: 30rpx;
}

.join-btn {
  background-color: #4F7CFF;
  color: #FFFFFF;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
}

.join-btn.quit {
  background-color: #FFFFFF;
  color: #4F7CFF;
  border: 1px solid #4F7CFF;
}

/* 进度信息 */
.progress-section {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #F5F7FA;
  border-radius: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.progress-info {
  width: 100%;
}

.progress-text {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #606266;
}

/* 描述和规则 */
.description-section,
.rules-section {
  margin-bottom: 30rpx;
}

.description-content,
.rules-content {
  font-size: 28rpx;
  color: #303133;
  line-height: 1.6;
}

/* 参与者 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.view-all {
  font-size: 26rpx;
  color: #4F7CFF;
}

.participants-loading {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
}

.participants-list {
  display: flex;
  flex-wrap: wrap;
}

.participant-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
  margin-bottom: 20rpx;
}

.participant-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.participant-name {
  font-size: 24rpx;
  color: #606266;
  width: 100%;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.empty-participants {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
  color: #909399;
  font-size: 28rpx;
}

/* 排行榜 */
.leaderboard-section {
  margin-bottom: 30rpx;
}

.leaderboard-btn {
  background-color: #FFFFFF;
  color: #4F7CFF;
  border: 1px solid #4F7CFF;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
}

/* 分享按钮 */
.share-section {
  margin-top: 40rpx;
}

.share-btn {
  background-color: #FFFFFF;
  color: #4F7CFF;
  border: 1px solid #4F7CFF;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-btn text {
  margin-left: 8rpx;
}

/* 进度条样式 */
.progress-bar {
  width: 100%;
  height: 16rpx;
  background-color: #E4E7ED;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #4F7CFF;
  border-radius: 8rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E4E7ED;
  border-top-color: #4F7CFF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin: 0 auto;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 3rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #909399;
  text-align: center;
  display: block;
} 
