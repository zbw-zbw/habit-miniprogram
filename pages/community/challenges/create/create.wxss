/* pages/community/challenges/create/create.wxss */
@import "/styles/iconfont.wxss";

.container {
  padding: 30rpx;
  background-color: #F5F7FA;
  min-height: 100vh;
}

.form-group {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #303133;
  margin-bottom: 16rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background-color: #F5F7FA;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #303133;
  box-sizing: border-box;
  border: 1rpx solid transparent;
}

.form-input.input-error {
  border-color: #F56C6C;
  background-color: rgba(245, 108, 108, 0.05);
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  background-color: #F5F7FA;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #303133;
  box-sizing: border-box;
  border: 1rpx solid transparent;
}

.form-textarea.input-error {
  border-color: #F56C6C;
  background-color: rgba(245, 108, 108, 0.05);
}

.error-message {
  font-size: 24rpx;
  color: #F56C6C;
  margin-top: 8rpx;
}

.image-upload {
  width: 100%;
  height: 300rpx;
  background-color: #F5F7FA;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #DCDFE6;
}

.image-upload .iconfont {
  font-size: 80rpx;
  color: #DCDFE6;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #909399;
}

.image-preview {
  position: relative;
  width: 100%;
  height: 300rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.preview-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.remove-image {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
}

.picker-view {
  width: 100%;
  height: 88rpx;
  background-color: #F5F7FA;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #303133;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-view .iconfont {
  font-size: 28rpx;
  color: #909399;
}

.radio-group {
  display: flex;
  margin-top: 16rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  margin-right: 60rpx;
  padding: 16rpx 0;
}

.radio-icon {
  font-size: 36rpx;
  color: #DCDFE6;
  margin-right: 12rpx;
}

.radio-item.active .radio-icon {
  color: #4F7CFF;
}

.radio-label {
  font-size: 28rpx;
  color: #303133;
}

.form-actions {
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx 30rpx;
}

.cancel-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 45%;
  height: 88rpx;
  background-color: #F5F7FA;
  color: #606266;
  font-size: 30rpx;
  border-radius: 8rpx;
  text-align: center;
  border: none;
}

.submit-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 45%;
  height: 88rpx;
  background: linear-gradient(135deg, #4F7CFF, #4169E1);
  color: #FFFFFF;
  font-size: 30rpx;
  border-radius: 8rpx;
  text-align: center;
  border: none;
}

.submit-btn.disabled {
  background: #CCCCCC;
  color: #FFFFFF;
}

/* 导航栏 */
.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #FFFFFF;
  position: relative;
}

.navbar-left {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.navbar-left .iconfont {
  font-size: 40rpx;
  color: #303133;
}

.navbar-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 32rpx;
  font-weight: 500;
  color: #303133;
}

.navbar-right {
  width: 60rpx;
}

/* 表单容器 */
.form-container {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.required {
  color: #F56C6C;
  margin-left: 4rpx;
}

.input-counter {
  text-align: right;
  font-size: 24rpx;
  color: #909399;
  margin-top: 8rpx;
}

.form-picker {
  width: 100%;
  height: 88rpx;
  background-color: #F5F7FA;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #303133;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.form-picker .iconfont {
  font-size: 32rpx;
  color: #909399;
}

.form-tips {
  font-size: 24rpx;
  color: #909399;
  margin-top: 8rpx;
}

/* 封面上传 */
.cover-item {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.cover-upload {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
  position: relative;
  overflow: hidden;
}

.cover-preview {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cover-upload-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 80rpx;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.cover-upload-mask .iconfont {
  font-size: 28rpx;
  color: #FFFFFF;
}

/* 标签容器 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: rgba(79, 124, 255, 0.1);
  color: #4F7CFF;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
}

.tag-remove {
  margin-left: 10rpx;
  font-size: 28rpx;
}

.tag-add {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #F5F7FA;
  color: #909399;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
}

.tag-add .iconfont {
  margin-right: 6rpx;
  font-size: 24rpx;
}

/* 标签选择器弹窗 */
.tag-selector-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tag-selector {
  width: 80%;
  max-height: 70vh;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.tag-selector-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #EBEEF5;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
}

.tag-selector-close {
  font-size: 40rpx;
  color: #909399;
}

.tag-selector-body {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.tag-selector-input {
  display: flex;
  margin-bottom: 30rpx;
}

.tag-selector-input input {
  flex: 1;
  height: 80rpx;
  background-color: #F5F7FA;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.tag-add-btn {
  width: 120rpx;
  height: 80rpx;
  background-color: #4F7CFF;
  color: #FFFFFF;
  font-size: 28rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
}

.tag-add-btn[disabled] {
  background-color: #DCDFE6;
}

.tag-selector-list {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.tag-selector-item {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background-color: #F5F7FA;
  color: #606266;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  position: relative;
  transition: all 0.3s;
}

.tag-selector-item.selected {
  background-color: rgba(79, 124, 255, 0.1);
  color: #4F7CFF;
  border: 1rpx solid #4F7CFF;
  padding-right: 40rpx;
}

.tag-check {
  position: absolute;
  right: 12rpx;
  font-size: 24rpx;
  color: #4F7CFF;
}

.selected-tags-preview {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #F5F7FA;
  border-radius: 8rpx;
}

.preview-title {
  font-size: 26rpx;
  color: #606266;
  margin-bottom: 16rpx;
}

.preview-tags {
  display: flex;
  flex-wrap: wrap;
}

.preview-tag {
  padding: 8rpx 16rpx;
  background-color: rgba(79, 124, 255, 0.1);
  color: #4F7CFF;
  border-radius: 20rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  font-size: 24rpx;
}

.tag-selector-footer {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #EBEEF5;
}

.tag-selector-confirm {
  width: 100%;
  height: 80rpx;
  background-color: #4F7CFF;
  color: #FFFFFF;
  font-size: 28rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

/* 提交按钮 */
.form-button-area {
  margin-top: 40rpx;
}

.form-button {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.form-button.active {
  background: linear-gradient(135deg, #4F7CFF, #4169E1);
  color: #FFFFFF;
}

.form-button.disabled {
  background-color: #CCCCCC;
  color: #FFFFFF;
} 
