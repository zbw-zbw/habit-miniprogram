/* pages/community/challenge/create/create.wxss */
@import "/styles/iconfont.wxss";

.container {
  background-color: #F5F7FA;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 导航栏 */
.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #FFFFFF;
  position: relative;
}

.navbar-left {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.navbar-left .iconfont {
  font-size: 40rpx;
  color: #303133;
}

.navbar-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 32rpx;
  font-weight: 500;
  color: #303133;
}

.navbar-right {
  width: 60rpx;
}

/* 表单容器 */
.form-container {
  background-color: #FFFFFF;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
  position: relative;
}

.form-label {
  font-size: 28rpx;
  color: #303133;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.required {
  color: #F56C6C;
  margin-left: 4rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #F5F7FA;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #303133;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 240rpx;
  background-color: #F5F7FA;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #303133;
  box-sizing: border-box;
}

.input-counter {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  font-size: 24rpx;
  color: #909399;
}

.form-picker {
  width: 100%;
  height: 80rpx;
  background-color: #F5F7FA;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #303133;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.form-picker .iconfont {
  font-size: 32rpx;
  color: #909399;
}

.form-tips {
  font-size: 24rpx;
  color: #909399;
  margin-top: 8rpx;
}

/* 封面上传 */
.cover-item {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.cover-upload {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
  position: relative;
  overflow: hidden;
}

.cover-preview {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cover-upload-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 80rpx;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.cover-upload-mask .iconfont {
  font-size: 28rpx;
  color: #FFFFFF;
}

.upload-text {
  font-size: 24rpx;
  color: #FFFFFF;
}

/* 标签容器 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: rgba(79, 124, 255, 0.1);
  color: #4F7CFF;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
}

.tag-remove {
  margin-left: 10rpx;
  font-size: 28rpx;
}

.tag-add {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #F5F7FA;
  color: #909399;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
}

.tag-add .iconfont {
  margin-right: 6rpx;
  font-size: 24rpx;
}

/* 提交按钮 */
.form-button-area {
  margin-top: 60rpx;
}

.form-button {
  width: 100%;
  height: 90rpx;
  background-color: #4F7CFF;
  color: #FFFFFF;
  font-size: 32rpx;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.form-button[disabled] {
  background-color: #DCDFE6;
  color: #FFFFFF;
}

/* 标签选择器弹窗 */
.tag-selector-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tag-selector {
  width: 80%;
  max-height: 70vh;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.tag-selector-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #EBEEF5;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
}

.tag-selector-close {
  font-size: 40rpx;
  color: #909399;
}

.tag-selector-body {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.tag-selector-input {
  display: flex;
  margin-bottom: 30rpx;
}

.tag-selector-input input {
  flex: 1;
  height: 80rpx;
  background-color: #F5F7FA;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.tag-add-btn {
  width: 120rpx;
  height: 80rpx;
  background-color: #4F7CFF;
  color: #FFFFFF;
  font-size: 28rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
}

.tag-add-btn[disabled] {
  background-color: #DCDFE6;
}

.tag-selector-list {
  display: flex;
  flex-wrap: wrap;
}

.tag-selector-item {
  padding: 10rpx 20rpx;
  background-color: #F5F7FA;
  color: #606266;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
}

.tag-selector-item.selected {
  background-color: rgba(79, 124, 255, 0.1);
  color: #4F7CFF;
}

.tag-selector-footer {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #EBEEF5;
}

.tag-selector-confirm {
  width: 100%;
  height: 80rpx;
  background-color: #4F7CFF;
  color: #FFFFFF;
  font-size: 28rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
} 
