/* pages/community/challenges/challenges.wxss */

/* 引入图标字体 */
@import "/styles/iconfont.wxss";

.container {
  background-color: #F5F7FA;
  min-height: 100vh;
  padding-bottom: 30rpx;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #FFFFFF;
  border-bottom: 1rpx solid #EBEEF5;
}

.search-bar.active {
  padding: 20rpx 30rpx;
}

.search-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #909399;
}

.search-icon .iconfont {
  font-size: 40rpx;
}

.search-input-container {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #F5F7FA;
  border-radius: 30rpx;
  padding: 0 20rpx;
  height: 60rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
}

.search-input-container .iconfont {
  font-size: 32rpx;
  color: #909399;
}

.create-btn {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #4F7CFF;
}

.create-btn .iconfont {
  font-size: 32rpx;
  margin-right: 8rpx;
}

/* 标签栏 */
.tabs {
  display: flex;
  background-color: #FFFFFF;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #EBEEF5;
  margin-bottom: 30rpx;
}

.tab-item {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #606266;
  position: relative;
}

.tab-item.active {
  color: #4F7CFF;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #4F7CFF;
  border-radius: 2rpx;
}

/* 挑战列表 */
.challenges-list {
  padding: 0 30rpx;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #DCDFE6;
  border-top-color: #4F7CFF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.loading-spinner.small {
  width: 30rpx;
  height: 30rpx;
  border-width: 2rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #909399;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-state .iconfont {
  font-size: 100rpx;
  color: #DCDFE6;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #909399;
  margin-bottom: 30rpx;
}

.empty-btn {
  width: 240rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #4F7CFF;
  color: #FFFFFF;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

/* 挑战卡片 */
.challenge-item {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.challenge-image {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
}

.status-tag {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: rgba(79, 124, 255, 0.9);
  color: #FFFFFF;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
}

.status-tag .iconfont {
  font-size: 24rpx;
  margin-right: 6rpx;
}

.challenge-content {
  padding: 24rpx;
}

.challenge-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 12rpx;
}

.challenge-description {
  font-size: 28rpx;
  color: #606266;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 标签列表 */
.tags-list {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.tag {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #4F7CFF;
  background-color: rgba(79, 124, 255, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  margin-right: 16rpx;
  margin-bottom: 10rpx;
}

.tag .iconfont {
  font-size: 24rpx;
  margin-right: 6rpx;
}

/* 挑战信息 */
.challenge-info {
  display: flex;
  margin-bottom: 16rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-right: 24rpx;
  font-size: 24rpx;
  color: #909399;
}

.info-item .iconfont {
  font-size: 24rpx;
  margin-right: 6rpx;
}

/* 进度条 */
.progress-bar-container {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.progress-bar {
  flex: 1;
  height: 12rpx;
  background-color: #EBEEF5;
  border-radius: 6rpx;
  overflow: hidden;
  margin-right: 16rpx;
}

.progress-fill {
  height: 100%;
  background-color: #4F7CFF;
  border-radius: 6rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #606266;
  min-width: 60rpx;
  text-align: right;
}

/* 参加按钮 */
.join-btn {
  width: 100%;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #4F7CFF;
  color: #FFFFFF;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.join-btn.quit {
  background-color: #F56C6C;
}

/* 底部加载更多 */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

.loading-more .loading-text {
  margin-top: 0;
  margin-left: 10rpx;
}

/* 没有更多数据 */
.no-more {
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #909399;
} 
