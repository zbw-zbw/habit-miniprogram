/* pages/community/community.wxss */

/* 引入图标字体 */
@import "/styles/iconfont.wxss";

.container {
  background-color: var(--background-color);
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 导航栏 */
.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background-color: var(--card-background);
  box-shadow: var(--shadow-light);
  margin-bottom: 2rpx;
}

.navbar-left .title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--title-color);
  background: var(--primary-gradient);
  -webkit-background-clip: text;
  color: transparent;
}

.navbar-right {
  display: flex;
  align-items: center;
}

.icon-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  border-radius: 50%;
  transition: background-color 0.2s ease;
}

.icon-btn:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.icon-btn .iconfont {
  font-size: 44rpx;
  color: var(--text-color);
}

/* 标签页 */
.tabs {
  display: flex;
  background-color: var(--card-background);
  padding: 0 32rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.03);
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: var(--text-color);
  position: relative;
  transition: all 0.2s ease;
}

.tab-item.active {
  color: var(--primary-color);
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  background: var(--primary-gradient);
  border-radius: 3rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--divider-color);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.loading-spinner.small {
  width: 30rpx;
  height: 30rpx;
  border-width: 2rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: var(--text-color-secondary);
}

/* 主内容区域 */
.content {
  padding: 24rpx 32rpx;
}

/* 好友故事 */
.friends-section {
  padding: 16px 0;
  background-color: #FFFFFF;
  margin-bottom: 12px;
}

.friends-scroll {
  white-space: nowrap;
  padding: 0 30rpx;
}

.friend-item {
  display: inline-block;
  width: 120rpx;
  margin-right: 20rpx;
  text-align: center;
}

.friend-avatar-container {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 0 auto 10rpx;
  position: relative;
}

.friend-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.friend-avatar-container.has-update::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border: 3rpx solid #4F7CFF;
  border-radius: 50%;
}

.friend-name {
  font-size: 24rpx;
  color: #606266;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
  display: block;
}

/* 小组列表 */
.groups-section {
  background-color: #FFFFFF;
  margin-bottom: 12px;
  padding: 0 0 16px 0;
}

.groups-scroll {
  padding: 0 16px;
  display: flex;
  overflow-x: auto;
}

.group-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 16px;
  width: 80px;
  flex-shrink: 0;
}

.group-avatar {
  width: 60px;
  height: 60px;
  border-radius: 12px;
  margin-bottom: 8px;
}

.group-info {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.group-name {
  font-size: 14px;
  color: #303133;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
  text-align: center;
  margin-bottom: 2px;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.group-members {
  font-size: 12px;
  color: #909399;
}

/* 挑战部分 */
.challenges-section {
  background-color: #FFFFFF;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 0 24rpx 0;
  border-bottom: 1px solid var(--divider-color);
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--title-color);
  position: relative;
  padding-left: 16rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background: var(--primary-gradient);
  border-radius: var(--radius-small);
}

.section-more {
  font-size: 26rpx;
  color: var(--primary-color);
  display: flex;
  align-items: center;
  white-space: nowrap;
}

.section-more .iconfont {
  margin-left: 4rpx;
  font-size: 24rpx;
}

.challenges-scroll {
  white-space: nowrap;
  padding: 0 30rpx;
}

.challenge-item {
  display: inline-block;
  width: 300rpx;
  height: 180rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.challenge-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.challenge-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.6));
}

.challenge-info {
  position: absolute;
  bottom: 16rpx;
  left: 16rpx;
  right: 16rpx;
  color: #FFFFFF;
}

.challenge-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  display: block;
}

.challenge-participants {
  font-size: 24rpx;
  opacity: 0.9;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  display: block;
}

.challenge-join {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
}

.challenge-join.joined {
  background-color: rgba(79, 124, 255, 0.8);
}

.challenge-join .iconfont {
  font-size: 28rpx;
}

/* 动态列表 */
.posts-section {
  background-color: #FFFFFF;
}

.post-item {
  padding: 28rpx 0;
  border-bottom: 1px solid var(--divider-color);
}

.post-item:last-child {
  border-bottom: none;
}

.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.post-user {
  display: flex;
  align-items: center;
}

.post-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  border: 2px solid #fff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.post-username {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--title-color);
  margin-bottom: 4rpx;
}

.post-meta {
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

.post-more .iconfont {
  font-size: 40rpx;
  color: var(--text-color-secondary);
  padding: 10rpx;
}

.post-content {
  margin-bottom: 20rpx;
}

.post-text {
  font-size: 28rpx;
  color: var(--text-color);
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: block;
}

.post-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.post-tag {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--primary-color);
  background-color: rgba(79, 124, 255, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 10rpx;
}

.post-tag .iconfont {
  font-size: 24rpx;
  margin-right: 6rpx;
}

.post-images {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -4rpx;
}

.post-image {
  width: calc(33.33% - 8rpx);
  height: 200rpx;
  margin: 4rpx;
  border-radius: var(--radius-medium);
  object-fit: cover;
}

.post-image.single {
  width: calc(100% - 8rpx);
  height: 400rpx;
}

.post-actions {
  display: flex;
  border-top: 1px solid var(--divider-color);
  padding-top: 16rpx;
  margin-top: 16rpx;
}

.post-action {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: var(--text-color-secondary);
  padding: 8rpx 0;
  transition: all 0.2s ease;
}

.post-action:active {
  background-color: rgba(0, 0, 0, 0.03);
}

.post-action.active {
  color: var(--primary-color);
}

.post-action .iconfont {
  font-size: 32rpx;
  margin-right: 8rpx;
}

/* 加载更多 */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

.loading-more .loading-text {
  margin-top: 0;
  margin-left: 10rpx;
}

/* 没有更多数据 */
.no-more {
  text-align: center;
  padding: 24rpx 0;
  font-size: 26rpx;
  color: var(--text-color-secondary);
}

/* 发布按钮 */
.create-post-btn {
  position: fixed;
  bottom: 60rpx;
  right: 32rpx;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background: var(--primary-gradient);
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-button);
  transition: transform 0.2s ease;
}

.create-post-btn:active {
  transform: scale(0.95);
}

.create-post-btn .iconfont {
  font-size: 50rpx;
}

/* 发布动态弹窗 */
.post-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}

.post-modal {
  width: 90%;
  max-height: 80vh;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.post-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #EBEEF5;
}

.post-modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #303133;
}

.post-modal-close {
  font-size: 40rpx;
  color: #909399;
}

.post-modal-content {
  flex: 1;
  padding: 24rpx;
  overflow-y: auto;
}

.post-textarea {
  width: 100%;
  height: 240rpx;
  font-size: 28rpx;
  line-height: 1.5;
  padding: 0;
  margin-bottom: 24rpx;
}

.selected-images {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -5rpx 16rpx;
}

.image-item {
  width: calc(33.33% - 10rpx);
  height: 200rpx;
  margin: 5rpx;
  position: relative;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  object-fit: cover;
}

.remove-image {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
}

.remove-image .iconfont {
  font-size: 24rpx;
}

.selected-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #4F7CFF;
  background-color: rgba(79, 124, 255, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  margin-right: 16rpx;
  margin-bottom: 10rpx;
}

.remove-tag {
  margin-left: 8rpx;
  font-size: 24rpx;
  color: #909399;
}

.post-modal-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-top: 1rpx solid #EBEEF5;
}

.post-tools {
  display: flex;
}

.post-tool {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.post-tool .iconfont {
  font-size: 40rpx;
  color: #606266;
}

.post-submit-btn {
  width: 160rpx;
  height: 70rpx;
  border-radius: 35rpx;
  background-color: #DCDFE6;
  color: #FFFFFF;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.post-submit-btn.active {
  background-color: #4F7CFF;
}

/* 空状态 */
.empty-state {
  padding: 16px;
  text-align: center;
  color: #909399;
  font-size: 14px;
  width: 100%;
}

/* 空状态挑战 */
.empty-challenge {
  display: flex;
  padding: 20rpx;
  width: 100%;
}

.empty-challenge-item {
  flex: 1;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 0 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.empty-challenge-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(79, 124, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.empty-challenge-icon .iconfont {
  font-size: 40rpx;
  color: #4F7CFF;
}

.empty-challenge-text {
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 20rpx;
}

.empty-challenge-btn {
  font-size: 24rpx;
  color: #4F7CFF;
  padding: 10rpx 30rpx;
  border: 1px solid #4F7CFF;
  border-radius: 30rpx;
  margin-top: 10rpx;
}

