.challenge-join .iconfont {
  font-size: 32rpx;
}

/* 未登录提示 */
.login-tip {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(255, 255, 255, 0.9);
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.login-tip text {
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 20rpx;
}

.login-btn {
  background-color: #4F7CFF;
  color: #FFFFFF;
  font-size: 28rpx;
  padding: 16rpx 60rpx;
  border-radius: 40rpx;
  border: none;
}

/* 内容卡片样式 */
.content-card {
  background-color: var(--card-background);
  border-radius: var(--radius-large);
  padding: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: var(--shadow-light);
  overflow: hidden;
} 
