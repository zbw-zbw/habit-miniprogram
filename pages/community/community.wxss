/* pages/community/community.wxss */

/* 引入图标字体 */
@import "/styles/iconfont.wxss";

.container {
  padding: 30rpx 30rpx 120rpx;
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 顶部导航栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--title-color);
}

.header-actions {
  display: flex;
  align-items: center;
}

.header-action {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #F5F7FA;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  position: relative;
}

.header-action .iconfont {
  font-size: 40rpx;
  color: var(--text-color);
}

.badge {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  min-width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  background-color: var(--error-color);
  color: #FFFFFF;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

/* 分类选择器 */
.tabs {
  display: flex;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 4rpx;
  margin-bottom: 30rpx;
  box-shadow: var(--shadow-light);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: var(--text-color-secondary);
  position: relative;
}

.tab-item.active {
  color: var(--primary-color);
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: var(--primary-color);
  border-radius: 2rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--divider-color);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: var(--text-color-secondary);
}

/* 章节标题 */
.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--title-color);
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-more {
  font-size: 24rpx;
  color: var(--primary-color);
}

/* 好友动态 */
.friends-section {
  margin-bottom: 30rpx;
}

.friends-list {
  white-space: nowrap;
  padding-bottom: 10rpx;
}

.friend-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
}

.friend-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: relative;
  margin-bottom: 10rpx;
}

.friend-avatar.has-update::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border: 4rpx solid var(--primary-color);
  border-radius: 50%;
}

.friend-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.friend-avatar-add {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #F5F7FA;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
  border: 2rpx dashed var(--divider-color);
}

.friend-avatar-add .iconfont {
  font-size: 40rpx;
  color: var(--text-color-secondary);
}

.friend-name {
  font-size: 24rpx;
  color: var(--text-color);
  width: 100rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 热门挑战 */
.challenges-section {
  margin-bottom: 30rpx;
}

.challenges-list {
  white-space: nowrap;
  padding-bottom: 10rpx;
}

.challenge-item {
  display: inline-block;
  width: 300rpx;
  margin-right: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #FFFFFF;
  box-shadow: var(--shadow-light);
}

.challenge-image {
  width: 100%;
  height: 160rpx;
  object-fit: cover;
}

.challenge-info {
  padding: 16rpx;
}

.challenge-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--title-color);
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.challenge-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.challenge-participants {
  font-size: 24rpx;
  color: var(--text-color-secondary);
  display: flex;
  align-items: center;
}

.challenge-participants .iconfont {
  font-size: 24rpx;
  margin-right: 6rpx;
}

.challenge-join {
  font-size: 24rpx;
  color: var(--primary-color);
  background-color: rgba(79, 124, 255, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
}

.challenge-join.joined {
  color: var(--success-color);
  background-color: rgba(103, 194, 58, 0.1);
}

/* 社区动态 */
.posts-section {
  margin-bottom: 30rpx;
}

.post-item {
  margin-bottom: 30rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: var(--shadow-light);
}

.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.post-user {
  display: flex;
  align-items: center;
}

.post-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.post-username {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--title-color);
  margin-bottom: 4rpx;
}

.post-meta {
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

.post-more .iconfont {
  font-size: 40rpx;
  color: var(--text-color-secondary);
}

.post-content {
  margin-bottom: 20rpx;
}

.post-text {
  font-size: 28rpx;
  color: var(--text-color);
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: block;
}

.post-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.post-tag {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--primary-color);
  background-color: rgba(79, 124, 255, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  margin-right: 16rpx;
  margin-bottom: 10rpx;
}

.post-tag .iconfont {
  font-size: 24rpx;
  margin-right: 6rpx;
}

.post-images {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -5rpx;
}

.post-image {
  width: calc(33.33% - 10rpx);
  height: 200rpx;
  margin: 5rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

.post-image.single {
  width: calc(100% - 10rpx);
  height: 400rpx;
}

.post-actions {
  display: flex;
  border-top: 1rpx solid var(--divider-color);
  padding-top: 16rpx;
}

.post-action {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

.post-action.active {
  color: var(--primary-color);
}

.post-action .iconfont {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.load-more, .no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

/* 发布动态弹窗 */
.post-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.post-modal.show {
  opacity: 1;
  visibility: visible;
}

.post-form {
  width: 90%;
  max-height: 80vh;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.form-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid var(--divider-color);
}

.form-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--title-color);
}

.form-close .iconfont {
  font-size: 40rpx;
  color: var(--text-color-secondary);
}

.form-content {
  flex: 1;
  padding: 24rpx;
  overflow-y: auto;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  color: var(--text-color);
  line-height: 1.6;
  padding: 0;
  margin-bottom: 20rpx;
}

.form-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.form-tag {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--primary-color);
  background-color: rgba(79, 124, 255, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 30rpx;
  margin-right: 16rpx;
  margin-bottom: 10rpx;
}

.form-tag .iconfont {
  font-size: 24rpx;
  margin-left: 8rpx;
}

.form-images {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -5rpx;
}

.form-image-item {
  width: calc(33.33% - 10rpx);
  height: 200rpx;
  margin: 5rpx;
  position: relative;
}

.form-image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  object-fit: cover;
}

.image-remove {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-remove .iconfont {
  font-size: 24rpx;
  color: #FFFFFF;
}

.form-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-top: 1rpx solid var(--divider-color);
}

.form-actions {
  display: flex;
}

.form-action {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.form-action .iconfont {
  font-size: 40rpx;
  color: var(--text-color);
}

.submit-btn {
  background-color: var(--primary-color);
  color: #FFFFFF;
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  margin: 0;
}

/* 浮动发布按钮 */
.float-btn {
  position: fixed;
  right: 40rpx;
  bottom: 140rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: var(--primary-color);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(79, 124, 255, 0.3);
  z-index: 100;
}

.float-btn .iconfont {
  font-size: 48rpx;
  color: #FFFFFF;
} 
