/* 社区通知页面样式 */
.container {
  padding: 0;
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 标签页 */
.tabs {
  display: flex;
  background-color: var(--card-background);
  padding: 0;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: var(--shadow-light);
}

.tab-item {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: var(--text-color);
  position: relative;
  transition: all 0.2s ease;
}

.tab-item.active {
  color: var(--primary-color);
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  background: var(--primary-gradient);
  border-radius: 3rpx;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--divider-color);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: var(--text-color-secondary);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 32rpx;
  color: var(--title-color);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.empty-tips {
  font-size: 28rpx;
  color: var(--text-color-secondary);
  text-align: center;
  max-width: 80%;
}

/* 通知列表 */
.notification-list {
  padding: 0;
  background-color: var(--card-background);
}

.notification-item {
  padding: 32rpx;
  border-bottom: 1px solid var(--divider-color);
  background-color: var(--card-background);
  transition: background-color 0.2s ease;
  position: relative;
}

.notification-item.unread {
  background-color: rgba(79, 124, 255, 0.05);
}

.notification-item.unread::before {
  content: '';
  position: absolute;
  left: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: var(--primary-color);
}

.notification-content {
  display: flex;
  align-items: flex-start;
}

.avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 2px solid #fff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.system-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background: rgba(79, 124, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.system-icon .iconfont {
  font-size: 48rpx;
  color: var(--primary-color);
}

.content {
  flex: 1;
  overflow: hidden;
}

.title {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.username {
  font-weight: 600;
  color: var(--title-color);
  margin-right: 8rpx;
}

.system-title {
  font-weight: 600;
  color: var(--title-color);
}

.time {
  font-size: 24rpx;
  color: var(--text-color-secondary);
  margin-bottom: 8rpx;
}

.post-preview, .comment-preview, .user-bio, .system-message {
  font-size: 26rpx;
  color: var(--text-color);
  line-height: 1.5;
  margin-top: 8rpx;
  background-color: var(--background-color);
  padding: 16rpx;
  border-radius: var(--radius-medium);
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.comment-preview {
  color: var(--primary-color);
  background-color: rgba(79, 124, 255, 0.05);
  font-weight: 500;
}

.action {
  margin-left: 16rpx;
  display: flex;
  align-items: center;
}

.preview-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: var(--radius-medium);
  object-fit: cover;
}

.like-icon {
  font-size: 48rpx;
  color: var(--error-color);
}

.follow-btn {
  min-width: 120rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 28rpx;
  background: var(--primary-gradient);
  color: white;
  font-size: 24rpx;
  padding: 0 24rpx;
  margin: 0;
}

.follow-btn.following {
  background: var(--divider-color);
  color: var(--text-color);
}

/* 加载更多与没有更多 */
.load-more {
  text-align: center;
  padding: 32rpx 0;
  font-size: 28rpx;
  color: var(--primary-color);
}

.no-more {
  text-align: center;
  padding: 32rpx 0;
  font-size: 28rpx;
  color: var(--text-color-secondary);
}

/* 底部间距 */
.bottom-space {
  height: 32rpx;
} 
