/* 用户资料设置页面样式 */
.profile-setup-container {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  min-height: 100vh;
  background-color: #fff;
}

.profile-setup-header {
  margin-bottom: 60rpx;
  text-align: center;
}

.profile-setup-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 16rpx;
}

.profile-setup-subtitle {
  font-size: 28rpx;
  color: #909399;
}

.profile-setup-form {
  display: flex;
  flex-direction: column;
}

/* 头像部分 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.avatar-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  padding: 0;
  margin: 0;
  background: none;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-edit-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #4F7CFF;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-edit-icon .iconfont {
  color: #fff;
  font-size: 24rpx;
}

.avatar-tip {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #909399;
}

/* 表单项 */
.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 16rpx;
}

.required {
  color: #F56C6C;
  margin-left: 8rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background-color: #F5F7FA;
  border-radius: 8rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #303133;
}

.input-error {
  border: 1px solid #F56C6C;
  background-color: rgba(245, 108, 108, 0.05);
}

.error-message {
  font-size: 24rpx;
  color: #F56C6C;
  margin-top: 8rpx;
}

/* 提交按钮 */
.form-actions {
  margin-top: 60rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: #4F7CFF;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn[disabled] {
  background-color: #a0cfff;
  color: #fff;
}

.submit-btn::after {
  border: none;
} 
