/* pages/analytics/detail/detail.wxss */

.detail-container {
  padding: 32rpx;
  background-color: var(--background-color, #F5F7FA);
  min-height: 100vh;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #DCDFE6;
  border-top-color: #4F7CFF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #909399;
}

/* 习惯头部信息 */
.habit-header {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.habit-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.habit-icon .iconfont {
  font-size: 48rpx;
}

.habit-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.habit-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 8rpx;
}

.habit-category {
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 8rpx;
}

.habit-since {
  font-size: 24rpx;
  color: #909399;
}

/* 统计卡片 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.stat-card {
  background-color: #FFFFFF;
  padding: 24rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stat-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #4F7CFF;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #909399;
}

/* 时间范围选择 */
.time-range {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.range-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
}

.range-options {
  display: flex;
  background-color: #F0F2F5;
  border-radius: 32rpx;
  padding: 4rpx;
}

.range-option {
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  color: #606266;
  border-radius: 28rpx;
}

.range-option.active {
  background-color: #4F7CFF;
  color: #FFFFFF;
}

/* 图表卡片 */
.chart-card {
  background-color: #FFFFFF;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.chart-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 24rpx;
}

.chart-container {
  height: 400rpx;
  width: 100%;
}

.chart-canvas {
  width: 100%;
  height: 100%;
}

/* 日历卡片 */
.calendar-card {
  background-color: #FFFFFF;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 24rpx;
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.calendar-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #303133;
}

.calendar-actions {
  display: flex;
}

.action-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F5F7FA;
  border-radius: 24rpx;
  margin-left: 16rpx;
}

.calendar-weekdays {
  display: flex;
  margin-bottom: 16rpx;
}

.weekday {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #909399;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.calendar-day {
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #606266;
  border-radius: 8rpx;
}

.calendar-day.other-month {
  color: #C0C4CC;
}

.calendar-day.today {
  background-color: #E6F1FF;
  color: #4F7CFF;
  font-weight: 600;
}

.calendar-day.completed {
  background-color: #4F7CFF;
  color: #FFFFFF;
}

.calendar-legend {
  display: flex;
  justify-content: center;
}

.legend-item {
  display: flex;
  align-items: center;
  margin: 0 16rpx;
}

.legend-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
}

.legend-color.completed {
  background-color: #4F7CFF;
}

.legend-color.today {
  background-color: #E6F1FF;
}

.legend-text {
  font-size: 24rpx;
  color: #909399;
}

/* 习惯模式分析 */
.patterns-card {
  background-color: #FFFFFF;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.pattern-items {
  display: flex;
  flex-direction: column;
}

.pattern-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1px solid #EBEEF5;
}

.pattern-item:last-child {
  border-bottom: none;
}

.pattern-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  background-color: #EFF5FF;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.pattern-icon .iconfont {
  font-size: 32rpx;
  color: #4F7CFF;
}

.pattern-info {
  flex: 1;
}

.pattern-title {
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 4rpx;
}

.pattern-value {
  font-size: 32rpx;
  color: #303133;
  font-weight: 500;
}

/* 个性化建议 */
.suggestions-card {
  background-color: #FFFFFF;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.suggestion-items {
  display: flex;
  flex-direction: column;
}

.suggestion-item {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1px solid #EBEEF5;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background-color: #EFF5FF;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.suggestion-icon .iconfont {
  font-size: 28rpx;
  color: #4F7CFF;
}

.suggestion-content {
  flex: 1;
}

.suggestion-text {
  font-size: 28rpx;
  color: #606266;
  line-height: 1.5;
}

.empty-suggestions {
  padding: 32rpx 0;
  text-align: center;
  color: #909399;
  font-size: 28rpx;
}

/* 习惯分析详情页面样式 */
.habit-analysis-detail {
  padding: 16px;
  background-color: #F5F7FA;
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 120rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #E4E7ED;
  border-top-color: #4F7CFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #909399;
}

/* 错误提示 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 120rpx;
}

.error-text {
  margin: 30rpx 0;
  font-size: 28rpx;
  color: #F56C6C;
  text-align: center;
}

.retry-button {
  margin-top: 20rpx;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #4F7CFF;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}

/* 习惯信息卡片 */
.habit-info-card {
  background-color: #FFFFFF;
  border-radius: 12px;
  overflow: hidden;
  margin-bottom: 16px;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.05);
}

.habit-info-header {
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  color: #FFFFFF;
}

.habit-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.habit-name {
  font-size: 36rpx;
  font-weight: 500;
}

.habit-info-body {
  padding: 20rpx 30rpx;
}

.date-range-selector {
  display: flex;
  justify-content: flex-end;
}

.picker-content {
  display: flex;
  align-items: center;
  background-color: #F5F7FA;
  border-radius: 8px;
  padding: 8rpx 20rpx;
}

.date-range-label {
  font-size: 24rpx;
  color: #909399;
  margin-right: 10rpx;
}

.date-range-value {
  font-size: 28rpx;
  color: #303133;
  margin-right: 10rpx;
}

/* 数据统计卡片 */
.stats-card {
  background-color: #FFFFFF;
  border-radius: 12px;
  padding: 20rpx 30rpx;
  margin-bottom: 16px;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.05);
}

.stats-row {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.stats-row:last-child {
  margin-bottom: 0;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stats-value {
  font-size: 40rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #909399;
}

/* 图表卡片 */
.chart-card {
  background-color: #FFFFFF;
  border-radius: 12px;
  padding: 20rpx 30rpx;
  margin-bottom: 16px;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 20rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #4F7CFF;
}

.trend-chart {
  height: 400rpx;
  padding: 20rpx 0;
}

.chart-placeholder {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #909399;
  font-size: 28rpx;
}

.chart-line {
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-around;
  margin-top: 20rpx;
}

.chart-point {
  width: 16rpx;
  background-color: #4F7CFF;
  border-radius: 4rpx 4rpx 0 0;
  position: relative;
  margin: 0 4rpx;
  transition: height 0.3s ease;
}

.tooltip {
  position: absolute;
  top: -60rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 6rpx 12rpx;
  border-radius: 4px;
  font-size: 20rpx;
  white-space: nowrap;
  display: none;
}

.chart-point:hover .tooltip {
  display: block;
}

/* 每周表现图表 */
.weekday-chart {
  height: 400rpx;
  padding: 20rpx 0;
}

.weekday-bar-container {
  height: 100%;
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
}

.weekday-bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.weekday-bar {
  width: 40rpx;
  background-color: #4F7CFF;
  border-radius: 4rpx 4rpx 0 0;
  margin-bottom: 10rpx;
  transition: height 0.3s ease;
}

.weekday-label {
  font-size: 24rpx;
  color: #909399;
  margin-bottom: 6rpx;
}

.weekday-value {
  font-size: 20rpx;
  color: #303133;
}

/* 洞察卡片 */
.insights-card {
  background-color: #FFFFFF;
  border-radius: 12px;
  padding: 20rpx 30rpx;
  margin-bottom: 16px;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.05);
}

.insights-list {
  padding: 10rpx 0;
}

.insight-item {
  display: flex;
  margin-bottom: 30rpx;
}

.insight-item:last-child {
  margin-bottom: 0;
}

.insight-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.icon {
  font-size: 40rpx;
  color: #FFFFFF;
}

.insight-content {
  flex: 1;
}

.insight-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 8rpx;
  display: block;
}

.insight-text {
  font-size: 28rpx;
  color: #606266;
  line-height: 1.5;
  display: block;
}

.no-insights {
  padding: 40rpx 0;
  text-align: center;
  color: #909399;
  font-size: 28rpx;
}

/* 建议卡片 */
.recommendations-card {
  background-color: #FFFFFF;
  border-radius: 12px;
  padding: 20rpx 30rpx;
  margin-bottom: 16px;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.05);
}

.recommendation-tabs {
  display: flex;
  border-bottom: 1px solid #E4E7ED;
  margin-bottom: 20rpx;
  overflow-x: auto;
  white-space: nowrap;
}

.tab-item {
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  color: #606266;
  position: relative;
  display: inline-flex;
  align-items: center;
}

.tab-item.active {
  color: #4F7CFF;
  font-weight: 500;
}

.tab-item.active:after {
  content: '';
  position: absolute;
  bottom: -1px;
  left: 0;
  right: 0;
  height: 3px;
  background-color: #4F7CFF;
}

.tab-text {
  margin-left: 8rpx;
}

.recommendation-content {
  padding: 10rpx 0;
}

.tip-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #F5F7FA;
  border-radius: 8px;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 10rpx;
  display: block;
}

.tip-content {
  font-size: 28rpx;
  color: #606266;
  line-height: 1.5;
}

.no-tips {
  padding: 40rpx 0;
  text-align: center;
  color: #909399;
  font-size: 28rpx;
}

/* 里程碑卡片 */
.milestones-card {
  background-color: #FFFFFF;
  border-radius: 12px;
  padding: 20rpx 30rpx;
  margin-bottom: 16px;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.05);
}

.milestones-timeline {
  padding: 10rpx 0 10rpx 30rpx;
  position: relative;
}

.milestones-timeline:before {
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  left: 10rpx;
  width: 2px;
  background-color: #E4E7ED;
}

.milestone-item {
  position: relative;
  padding-bottom: 40rpx;
  display: flex;
}

.milestone-item:last-child {
  padding-bottom: 0;
}

.milestone-dot {
  position: absolute;
  left: -30rpx;
  top: 6rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #E4E7ED;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}

.milestone-item.achieved .milestone-dot {
  width: 40rpx;
  height: 40rpx;
  left: -40rpx;
  top: 0;
  background-color: #67C23A;
}

.milestone-content {
  padding-left: 20rpx;
}

.milestone-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 6rpx;
  display: block;
}

.milestone-item.achieved .milestone-title {
  color: #67C23A;
}

.milestone-date {
  font-size: 24rpx;
  color: #909399;
  margin-bottom: 6rpx;
  display: block;
}

.milestone-description {
  font-size: 28rpx;
  color: #606266;
  line-height: 1.5;
}

.no-milestones {
  padding: 40rpx 0;
  text-align: center;
  color: #909399;
  font-size: 28rpx;
}

/* 为不同类型的洞察图标添加颜色 */
.achievement-icon {
  background-color: #67C23A;
}

.progress-icon {
  background-color: #409EFF;
}

.encouragement-icon {
  background-color: #E6A23C;
}

.pattern-icon {
  background-color: #9370DB;
}

.streak-icon {
  background-color: #FF7F50;
}

.improvement-icon {
  background-color: #67C23A;
}

.decline-icon {
  background-color: #F56C6C;
}

.reflection-icon {
  background-color: #409EFF;
}

/* 默认图标颜色 */
.insight-icon {
  background-color: #909399;
}
