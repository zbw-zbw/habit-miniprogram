/* pages/analytics/analytics.wxss */

/* 引入图标字体 */
@import "/styles/iconfont.wxss";

.container {
  padding: 0 32rpx 32rpx;
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 标签栏 */
.tabs {
  display: flex;
  background-color: #FFFFFF;
  padding: 16rpx 0;
  border-bottom: 1px solid var(--divider-color);
  margin-bottom: 16rpx;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: var(--text-color);
  padding: 16rpx 0;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: var(--primary-color);
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background-color: var(--primary-color);
  border-radius: 2rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #DCDFE6;
  border-top-color: #4F7CFF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #909399;
}

/* 统计卡片 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.stat-card {
  background-color: #FFFFFF;
  padding: 24rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stat-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #4F7CFF;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #909399;
}

/* 时间范围选择 */
.time-range {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.range-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
}

.range-options {
  display: flex;
  background-color: #F0F2F5;
  border-radius: 32rpx;
  padding: 4rpx;
}

.range-option {
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  color: #606266;
  border-radius: 28rpx;
}

.range-option.active {
  background-color: #4F7CFF;
  color: #FFFFFF;
}

/* 图表卡片 */
.chart-card {
  background-color: #FFFFFF;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.chart-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 24rpx;
}

.chart-container {
  height: 400rpx;
  width: 100%;
}

.chart-canvas {
  width: 100%;
  height: 100%;
}

/* 连续打卡卡片 */
.streak-card {
  background-color: #FFFFFF;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.streak-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.streak-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
}

.streak-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #4F7CFF;
}

.streak-progress {
  height: 16rpx;
  background-color: #F0F2F5;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.streak-bar {
  height: 100%;
  background-color: #4F7CFF;
  border-radius: 8rpx;
  transition: width 0.5s ease;
}

.streak-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.streak-label {
  font-size: 24rpx;
  color: #909399;
}

.streak-record {
  font-size: 28rpx;
  font-weight: 500;
  color: #303133;
}

/* 按钮样式 */
.report-btn, .insight-btn {
  margin-top: 16rpx;
  background-color: #FFFFFF;
  color: #4F7CFF;
  font-size: 28rpx;
  border: 1px solid #4F7CFF;
  border-radius: 8rpx;
}

.report-btn {
  margin-bottom: 16rpx;
}

.insight-btn {
  background-color: #4F7CFF;
  color: #FFFFFF;
}

/* 习惯列表 */
.habits-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.habit-card {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.habit-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.habit-icon .iconfont {
  font-size: 48rpx;
}

.habit-info {
  flex: 1;
}

.habit-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 8rpx;
}

.habit-stats {
  display: flex;
}

.habit-stat {
  margin-right: 24rpx;
  display: flex;
  flex-direction: column;
}

.habit-stat .stat-value {
  font-size: 28rpx;
  margin-bottom: 4rpx;
}

.habit-stat .stat-label {
  font-size: 24rpx;
}

.habit-arrow {
  color: #C0C4CC;
}

/* 日历样式 */
.calendar-card {
  background-color: #FFFFFF;
  padding: 24rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.calendar-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
}

.calendar-actions {
  display: flex;
}

.calendar-action {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F5F7FA;
  border-radius: 24rpx;
  margin-left: 16rpx;
}

.calendar-weekdays {
  display: flex;
  margin-bottom: 16rpx;
}

.weekday {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #909399;
}

.calendar-days {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
  margin-bottom: 24rpx;
}

.calendar-day {
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #606266;
  border-radius: 8rpx;
}

.calendar-day.other-month {
  color: #C0C4CC;
}

.calendar-day.today {
  background-color: #E6F1FF;
  color: #4F7CFF;
  font-weight: 600;
}

.calendar-day.completed {
  background-color: #4F7CFF;
  color: #FFFFFF;
}

.calendar-legend {
  display: flex;
  justify-content: center;
}

.legend-item {
  display: flex;
  align-items: center;
  margin: 0 16rpx;
}

.legend-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
}

.legend-color.completed {
  background-color: #4F7CFF;
}

.legend-color.today {
  background-color: #E6F1FF;
}

.legend-text {
  font-size: 24rpx;
  color: #909399;
} 
