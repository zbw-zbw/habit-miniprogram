/* 关于我们页面样式 */
@import '/styles/iconfont.wxss';

.container {
  background-color: var(--background-color);
  min-height: 100vh;
  padding: 32rpx;
  box-sizing: border-box;
}

/* 头部 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0 60rpx;
  position: relative;
  background: var(--card-background);
  border-radius: var(--radius-large);
  box-shadow: var(--shadow-light);
  margin-bottom: 32rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 24rpx;
  border-radius: 40rpx;
  box-shadow: var(--shadow-medium);
}

.app-info {
  text-align: center;
}

.app-name {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--title-color);
  margin-bottom: 8rpx;
}

.app-version {
  font-size: 24rpx;
  color: var(--text-color-secondary);
  margin-bottom: 16rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 500;
}

/* 内容区域 */
.content {
  background-color: var(--card-background);
  border-radius: var(--radius-large);
  box-shadow: var(--shadow-light);
  overflow: hidden;
  margin-bottom: 32rpx;
}

/* 区块 */
.section {
  padding: 32rpx;
  border-bottom: 1px solid var(--divider-color);
}

.section:last-child {
  border-bottom: none;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--title-color);
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 16rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background: var(--primary-gradient);
  border-radius: var(--radius-small);
}

.section-content {
  
}

.paragraph {
  font-size: 28rpx;
  color: var(--text-color);
  line-height: 1.6;
  margin-bottom: 20rpx;
  text-align: justify;
}

.paragraph:last-child {
  margin-bottom: 0;
}

/* 功能特色 */
.feature-list {
  
}

.feature-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.feature-item:last-child {
  margin-bottom: 0;
}

.feature-item .iconfont {
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(79, 124, 255, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--primary-color);
  font-size: 32rpx;
  margin-right: 20rpx;
}

.feature-text {
  font-size: 28rpx;
  color: var(--text-color);
}

/* 联系方式 */
.contact-list {
  
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid var(--divider-color);
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-item .iconfont {
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(79, 124, 255, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--primary-color);
  font-size: 32rpx;
  margin-right: 20rpx;
}

.contact-text {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color);
}

.contact-action {
  font-size: 26rpx;
  color: var(--primary-color);
  padding: 8rpx 16rpx;
  border: 1px solid var(--primary-color);
  border-radius: 24rpx;
}

/* 链接列表 */
.link-list {
  
}

.link-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1px solid var(--divider-color);
}

.link-item:last-child {
  border-bottom: none;
}

.link-item text:first-child {
  font-size: 28rpx;
  color: var(--text-color);
}

.link-item .iconfont {
  font-size: 28rpx;
  color: var(--text-color-secondary);
}

/* 底部 */
.footer {
  text-align: center;
  padding: 32rpx 0;
}

.copyright {
  font-size: 24rpx;
  color: var(--text-color-secondary);
} 
