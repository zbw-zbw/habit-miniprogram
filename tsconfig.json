{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "typeRoots": [
      "./typings"
    ],
    "lib": ["ES2018", "DOM"],
    "types": []
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
} 
