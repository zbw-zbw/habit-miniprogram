/* packageAnalytics/pages/detail/detail.wxss */

.detail-container {
  padding: 32rpx;
  background-color: var(--background-color, #F5F7FA);
  min-height: 100vh;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #DCDFE6;
  border-top-color: #4F7CFF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #909399;
}

/* 习惯头部信息 */
.habit-header {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.habit-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.habit-icon .iconfont {
  font-size: 48rpx;
}

.habit-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.habit-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 8rpx;
}

.habit-category {
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 8rpx;
}

.habit-since {
  font-size: 24rpx;
  color: #909399;
}

/* 统计卡片 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.stat-card {
  background-color: #FFFFFF;
  padding: 24rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stat-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #4F7CFF;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #909399;
}

/* 时间范围选择 */
.time-range {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.range-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
}

.range-options {
  display: flex;
  background-color: #F0F2F5;
  border-radius: 32rpx;
  padding: 4rpx;
}

.range-option {
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  color: #606266;
  border-radius: 28rpx;
}

.range-option.active {
  background-color: #4F7CFF;
  color: #FFFFFF;
}

/* 图表卡片 */
.chart-card {
  background-color: #FFFFFF;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.chart-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 24rpx;
}

.chart-container {
  height: 400rpx;
  width: 100%;
}

.chart-canvas {
  width: 100%;
  height: 100%;
}

/* 日历卡片 */
.calendar-card {
  background-color: #FFFFFF;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 24rpx;
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.calendar-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #303133;
}

.calendar-actions {
  display: flex;
}

.action-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F5F7FA;
  border-radius: 24rpx;
  margin-left: 16rpx;
}

.calendar-weekdays {
  display: flex;
  margin-bottom: 16rpx;
}

.weekday {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #909399;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.calendar-day {
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #606266;
  border-radius: 8rpx;
}

.calendar-day.other-month {
  color: #C0C4CC;
}

.calendar-day.today {
  background-color: #E6F1FF;
  color: #4F7CFF;
  font-weight: 600;
}

.calendar-day.completed {
  background-color: #4F7CFF;
  color: #FFFFFF;
}

.calendar-legend {
  display: flex;
  justify-content: center;
}

.legend-item {
  display: flex;
  align-items: center;
  margin: 0 16rpx;
}

.legend-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
}

.legend-color.completed {
  background-color: #4F7CFF;
}

.legend-color.today {
  background-color: #E6F1FF;
}

.legend-text {
  font-size: 24rpx;
  color: #909399;
}

/* 习惯模式分析 */
.patterns-card {
  background-color: #FFFFFF;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.pattern-items {
  display: flex;
  flex-direction: column;
}

.pattern-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1px solid #EBEEF5;
}

.pattern-item:last-child {
  border-bottom: none;
}

.pattern-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  background-color: #EFF5FF;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.pattern-icon .iconfont {
  font-size: 32rpx;
  color: #4F7CFF;
}

.pattern-info {
  flex: 1;
}

.pattern-title {
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 4rpx;
}

.pattern-value {
  font-size: 32rpx;
  color: #303133;
  font-weight: 500;
}

/* 个性化建议 */
.suggestions-card {
  background-color: #FFFFFF;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.suggestion-items {
  display: flex;
  flex-direction: column;
}

.suggestion-item {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1px solid #EBEEF5;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background-color: #EFF5FF;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.suggestion-icon .iconfont {
  font-size: 28rpx;
  color: #4F7CFF;
}

.suggestion-content {
  flex: 1;
}

.suggestion-text {
  font-size: 28rpx;
  color: #606266;
  line-height: 1.5;
}

.empty-suggestions {
  padding: 32rpx 0;
  text-align: center;
  color: #909399;
  font-size: 28rpx;
}
