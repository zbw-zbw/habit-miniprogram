{
  "name": "habit-tracker-server",
  "version": "1.0.0",
  "description": "习惯打卡小程序后端服务",
  "main": "src/app.js",
  "scripts": {
    "start": "node start-server.js",
    "dev": "nodemon start-server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "seed": "node src/scripts/seed-templates.js",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.js\""
  },
  "keywords": [
    "habit",
    "tracker",
    "miniprogram",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/scripts/**/*.js"
    ]
  }
} 
 