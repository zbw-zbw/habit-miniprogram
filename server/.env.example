# 服务器配置
PORT=3000
NODE_ENV=development           # 可选: development, test, production
BASE_URL=http://localhost:3000 # API基础URL，用于生成资源链接

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/habit-tracker
# 如果使用MongoDB Atlas，格式为：
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/habit-tracker

# JWT配置
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# 上传配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760 # 10MB

# CORS配置
CORS_ORIGIN=* # 生产环境建议设置为实际域名

# 日志配置
LOG_LEVEL=info # 可选: error, warn, info, debug
